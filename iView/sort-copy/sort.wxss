.sort{
  display: flex;
  height: 80rpx;
  align-items: center;
  position: relative;
}
.sort .title{
  line-height: 80rpx;
  font-size: 32rpx;
}
.sort .cell{
  height: 100%;
  width: 60rpx;
  background: url(data:image/png;base64,) no-repeat center/contain;
}
.sort .cell.top{
  transform: rotate(180deg);
  margin-left: 80rpx;
}
.sort .cell.down{
  margin-left: 60rpx;
}
.sort .cell.disable{
  background-image: url(data:image/png;base64,);
}
.sort .cell.clear{
  background-image: url(data:image/png;base64,);
  position: absolute;
  right: 0;
  top: 0;
}
