	<view wx:for="{{imgsPath}}" wx:key="{{item.src}}" hidden="{{item.hidden}}" class="image" animation="{{item.animationOuter}}">
			<image animation="{{item.animationImg}}" mode="aspectFill" style="width: {{item.width + 'px'}}; height: {{item.height + 'px'}}" src="{{item.src}}"></image>
	</view>
</view>