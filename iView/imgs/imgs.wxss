.img-box{
	height: 800rpx;
	border: 2px solid green;
	display: flex;
	justify-content: center;
	align-items: center;
}
.img-box .image{
	width: 100%;
	height: 100%;
	flex-shrink: 0;
	overflow: hidden;
	position: relative;
}
.img-box .image image{
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	transform: scale(1,1);
	transition: all 3s ease; 
}