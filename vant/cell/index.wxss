@import '../common/index.wxss';

.van-cell {
    width: 100%;
    display: -webkit-flex;
    display: flex;
    padding: 26rpx 30rpx;
    box-sizing: border-box;
    line-height: 48rpx;
    position: relative;
    background-color: #fff;
    color: #333;
    font-size: 28rpx
}

.van-cell::after {
    content: ' ';
    position: absolute;
    pointer-events: none;
    box-sizing: border-box;
    -webkit-transform-origin: center;
    transform-origin: center;
    top: auto;
    left: 30rpx;
    right: 0;
    bottom: 0;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    border-bottom: 1px solid #f5f5f5
}

.van-cell--borderless::after {
    display: none
}

.van-cell-group {
    background-color: #fff
}

.van-cell__label {
    color: #999;
    font-size: 24rpx;
    margin-top: 6rpx;
    line-height: 36rpx
}

.van-cell__title,
.van-cell__value {
    -webkit-flex: 1;
    flex: 1
}

.van-cell__title:empty,
.van-cell__value:empty {
    display: none
}

.van-cell__value {
    color: #999;
    overflow: hidden;
    text-align: right;
    vertical-align: middle
}

.van-cell__left-icon-wrap,
.van-cell__right-icon-wrap {
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
    height: 48rpx;
    font-size: 32rpx
}

.van-cell__left-icon-wrap {
    margin-right: 10rpx
}

.van-cell__right-icon-wrap {
    margin-left: 10rpx;
    color: #999
}

.van-cell__left-icon {
    line-height: 48rpx;
    vertical-align: middle;
}

.van-cell__right-icon {
    line-height: 48rpx;
    font-size: 22rpx;
    color:#999;
}

.van-cell--clickable:active {
    background-color: #f5f5f5
}

.van-cell--required {
    overflow: visible
}

.van-cell--required::before {
    content: '*';
    position: absolute;
    left: 14rpx;
    font-size: 28rpx;
    color: #f44
}

.van-cell--center {
    -webkit-align-items: center;
    align-items: center
}

.van-cell--large {
    padding-top: 24rpx;
    padding-bottom: 24rpx
}

.van-cell--large .van-cell__title {
    font-size: 32rpx
}

.van-cell--large .van-cell__label {
    font-size: 28rpx
}

.van-cell--small {
    padding-top: 18rpx;
    padding-bottom: 18rpx
}

.van-cell--small .van-cell__title {
    font-size: 28rpx
}

.van-cell--small .van-cell__label {
    font-size: 28rpx
}