@import "../../utils/weui.wxss";
.container{
}
.session{
  margin: 0 15px;
}
.ct-header{
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #f5f6f6; 
  margin: 0;
  padding: 0 15px;
}
.ct-header .ct-title{
  flex-grow: 1;
  font-size: 14px;
}
.ct-header .ct-button{
  text-align: right;
  display: flex;
  align-items: center;
}
.ct-header .ct-button button{
  padding:8px 10px;
  line-height: 1;
}
.card{
  padding: 10px 0;
  border-bottom: 1px solid #f5f6f6;
}
.card:last-child{
	border:none;
}
.card-main{
  position: relative;
  display: flex;
}
.card-img{
  margin-right: 10px;
}
.card-img image{
  max-width: 80rpx;
  max-height: 80rpx;
  vertical-align: top;
}
.card-content{
  width: 100px;
  flex-grow: 1;
}
.card-title{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
  height: 40rpx;
  line-height: 40rpx;
}
.card-des{
	font-size: 12px;
	height: 40rpx;
	line-height: 40rpx;
	display: flex;
	color: #999;
}
.card-des view{
	margin-right: 10px;
}

.ct-edit{
	border: none;
	border-top:1px solid #f5f6f6;
}
.beizhu .textarea{
	border: 1px solid #f5f6f6;
	border-radius: 5px;
	padding: 5px;
	margin-bottom: 40px;
}
.textarea textarea{
	width: 100%;
	height: 100px;
	line-height: 20px;
	font-size: 14px;
}
