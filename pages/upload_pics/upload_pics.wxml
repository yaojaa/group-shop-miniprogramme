<!--pages/upload_pics.wxml-->
<i-custom-bar bind:onBack="onBack" backColor="#fff" showIcon="{{true}}" title="上传介绍图片"> </i-custom-bar>
<view class="container mtop100">

    <view style="width: 250rpx;text-align: center;">
      <i-button bind:click="addPicture" type="success" shape="circle" size="large">+ 点击上传</i-button>
    </view>

    <view class="weui-cell picture-item" wx:key="{{item.index}}" wx:for="{{content_imgs}}" wx:key="*this">
        <image src="{{item}}" mode="aspectFill" />



         <i-icon class="close" data-index="{{index}}" bindtap="toUp" color="#999" size="28" type="packup" />

          <i-icon class="close" data-index="{{index}}" bindtap="toDown" color="#999" size="28" type="unfold" />



        <i-icon class="close" data-index="{{index}}" bindtap="removePictrue" color="#999" size="28" type="close" />
    </view>





</view>