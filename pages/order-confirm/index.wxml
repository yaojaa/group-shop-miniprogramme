<i-custom-bar showBackIcon="{{true}}" fixed backImage="http://img.atomstone.com/top_bar_bg.jpg" title="确认订单"> </i-custom-bar>
<view class="container cf mtop100">
    <view class="fixed-btn text-justify">
        <view class="flex align-center">
            <view class="mh-df text-muted text-sm">
                共计 {{totalNumer}} 件
            </view>
            <view class="pb-xs">
                <text class="text-muted text-sm">应付金额：</text>
                <text class="text-lg bold coral-text">¥{{amountMoney}}</text>
                <text class="text-muted text-sm"> 元</text>
            </view>
        </view>
        <form bindsubmit="formSubmit" report-submit="true" data-fn="createOrder">
            <button class="btn primary w-min-lg lg" formType="submit" loading="{{btn_load}}" disabled="{{btn_load}}">去付款</button>
        </form>
    </view>
    <view class="content-wrap">
        <view class="ziti" wx:if="{{delivery_method==2}}">
            <van-cell-group title="选择提货点">
                <block wx:for="{{self_address}}">
                    <van-field disabled label="团长" value="{{seller.nickname}}" wx:if="{{seller.nickname}}"  size="small"/>
                    <van-field disabled label="手机号" value="{{seller.mobile}}"  wx:if="{{seller.mobile}}"  size="small" />
                    <van-field disabled label="提货点" value="{{item.address}}"  wx:if="{{item.address}}" size="small" />
                </block>
            </van-cell-group>
            <van-cell-group title="取货人信息">
                <van-field label="姓名" value="{{consignee}}" size="small" bind:input="inputConsignee"/>
                <van-field label="手机号" type="number" value="{{mobile}}" center clearable use-button-slot size="small" bind:input="inputMobile">
                    <van-button slot="button" size="mini" type="primary" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" wx:if="{{!mobile}}" block="{{true}}"><text class="ph-xs">使用微信绑定的手机号</text></van-button>
                </van-field>
            </van-cell-group>
            <!--             <i-panel title="选择提货点">
                <van-radio-group value="{{ address_id }}" disabled="{{self_address.length == 0}}" bind:change="onAddressChange">
                    <van-radio checked-color="#07c160" wx:for="{{self_address}}" wx:key="{{item.self_address_id}}" name="{{item.self_address_id}}">
                        {{item.address}}{{item.door_number}}
                    </van-radio>
                </van-radio-group>
            </i-panel> -->
            <!-- <view class="white-bg">
                <i-panel title="取货人信息">
                    <i-input value="{{ consignee }}" id="consignee" bind:change="inputTodata" placeholder="微信昵称" />
                    <i-input value="{{ mobile }}" id="mobile" bind:change="inputTodata" type="number" placeholder="手机号" />
                    <button class="btn" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">使用微信绑定的手机号</button>
                </i-panel>
            </view> -->
            <view class="address-line"></view>
        </view>
        <view class="address" wx:if="{{delivery_method==1}}">
            <navigator url="../address/index?source=cart&id={{address.address_id}}" hover-class="none" class="white-bg flex align-center p-df" wx:if="{{address}}">
                <van-icon name="location-o" />
                <view class="flex-sub mh-sm">
                    <view class="flex align-center">
                        <text class="bold text-lg mr-xs">{{address.consignee}}</text>
                        <text class="text-muted">{{address.mobile}}</text></view>
                    <view class="text-sm mt-xs"><text class="text-gray">配送地址：</text>
                        <text class="">{{address.province}}{{address.city}}{{address.district}}{{address.address}}</text></view>
                </view>
                <van-icon name="arrow" color="#999" />
            </navigator>
            <van-cell-group wx:else>
                <van-cell title="手动添加收货地址" is-link url="../address-form/index?source=cart">
                    <van-icon name="add-square" color="#FF5757" size="40rpx" slot="icon" custom-class="mr-xs" />
                </van-cell>
                <van-cell title="一键获取微信地址" is-link bindtap="openAddress">
                    <van-icon name="chat" color="#49b34d" size="40rpx" slot="icon" custom-class="mr-xs" />
                </van-cell>
            </van-cell-group>
            <view class="address-line"></view>
        </view>
        <view class="goods-panel ph-df white-bg mv-sm cf">
            <view class="goods-panel-hd pv-sm flex align-center">
                <view class="flex-sub mr-df">
                    <view class="flex align-center">
                        <image src="{{seller.headimg}}" class="shop-tb mr-xs img-lg">
                        </image>
                        <view class="flex-sub text-hide">{{seller.nickname}}</view>
                    </view>
                </view>
                <view class="text-muted"></view>
            </view>
            <view class="solid-bottom"></view>
            <view class="goods-panel-bd pb-df">
                <view wx:for="{{cart}}" wx:key="{{index}}" hover-class="none" class="flex mt-df goods-panel-item">
                    <image class="goods-cover-image" src="{{item.spec_pic[0]}}"></image>
                    <view class="flex-sub por">
                        <view class="text-hide two-line  bold title">
                            {{item.spec_name}} <text class="text-muted mt-xs text-sm">{{item.spec_desc}}</text>
                        </view>
                        <view class="text-justify bt-bar">
                            <view class="price text-muted">￥{{item.spec_price}}</view>
                            <view class="text-muted"><text>x </text>
                                <text>{{item.item_num}}</text></view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <van-cell-group custom-class="mb-sm">
            <!--   <van-cell title="购买数量">
                <van-stepper value="{{ 2 }}" min="1" integer bind:change="handleNumber" />
            </van-cell> -->
            <!--  <van-cell title="配送方式" value="自提" value-class="text-gray" />
            <van-cell title="订单总价" value="￥100" value-class="" /> -->
            <van-field input-align="left" bindchange="" value="{{area}}" label="留言" type="textarea" placeholder="稍句话..." autosize />
        </van-cell-group>
    </view>
    <i-message id="message" />
    <van-toast id="van-toast" />
</view>