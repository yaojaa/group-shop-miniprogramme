<i-custom-bar title="收货地址" showIcon="{{true}}"> </i-custom-bar>
<view class="container gray-wrap cf" style="margin-top:80rpx;">
    <view class="fixed-btn">
        <navigator url="../address-form/index" class="btn xxl primary block" bindtap="submit">
            添加新地址
        </navigator>
    </view>
    <view class="content-wrap">
        <view class="white-bg mv-sm">
            <van-swipe-cell right-width="{{ 60 }}">
                <view class="address-item">
                    <view class="flex align-center">
                        <view class="ttm-checkbox align-self-center checked">
                            <van-icon name="success" custom-class="iconsuccess" />
                        </view>
                        <view class="bd">
                            <view class="text-lg bold"><text class="mr-sm">金城武</text><text class="mr-sm">18888888888</text><text class="btn lt primary">默认</text></view>
                            <view class="text-gray mt-xs">
                                湖北武汉市武昌区中南路街道武汉市
                                武昌区明主二路白宫101单元2楼
                            </view>
                        </view>
                        <navigator url="../address-form/index" hover-class="none" class="fd solid-left">
                            <view class="iconfont icon-edit text-gray"></view>
                        </navigator>
                    </view>
                </view>
                <view slot="right" class="address-del">删除</view>
            </van-swipe-cell>
            <block wx:for="{{3}}" wx:key="{{index}}">
                <van-swipe-cell right-width="{{ 60 }}">
                    <view class="address-item">
                        <view class="flex align-center">
                            <view class="bd">
                                <view class="text-lg bold"><text class="mr-sm">金城武</text><text class="mr-sm">18888888888</text><!-- <text class="btn lt primary">默认</text> -->
                                </view>
                                <view class="text-gray mt-xs">
                                    湖北武汉市武昌区中南路街道武汉市
                                    武昌区明主二路白宫101单元2楼
                                </view>
                            </view>
                            <navigator url="../address-form/index" hover-class="none" class="fd solid-left">
                                <view class="iconfont icon-edit text-gray"></view>
                            </navigator>
                        </view>
                    </view>
                    <view slot="right" class="address-del">删除</view>
                </van-swipe-cell>
                <view class="solid-bottom"></view>
            </block>
        </view>
    </view>
</view>