<view class="container">
    <view class="text-justify ph-df pb-sm pt-df">
        <view class="f14">粉丝(234) </view>
        <van-button icon="star-o" type="primary" plain size="mini" >微信通知</van-button>
    </view>
   <wux-filterbar items="{{ items }}" bind:change="onChange" bind:open="onOpen" bind:close="onClose" />
    <view class="white-bg">
        <view class="solid-bottom p-df flex fans-list" wx:for="{{list}}" wx:key="{{index}}">
            <image class="avatar mr-sm" src="{{item.headimg}}"></image>
            <view class="flex-sub">
                <view class="text-justify">
                    <view class="name">{{item.nickname}}</view>
                    <view class="info flex align-center">
                        <van-icon name="wechat" size="32rpx" color="#999" />
                        <text class="ml-xs mr-df text-sm">{{item.order_count}}</text>
                        <van-icon name="gold-coin" size="32rpx" color="#999" />
                        <text class="ml-xs text-sm">{{item.order_total}}</text>
                    </view>
                </view>
                <view class="date text-sm text-muted mt-sm">
                    最后访问：2019-12-10 最进参与：青柠檬3斤
                </view>
            </view>
        </view>
    </view>
    <view class="load-box" wx:if="{{loading}}">
        <wux-spin wux-class="spin" size="large" />
    </view>
</view>