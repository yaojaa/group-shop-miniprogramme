/**index.wxss**/
.location{
  padding:20rpx;
  font-size: 24rpx;

}
.product-item {
  padding:30rpx;
  background: #f6f6fb;
  position: relative;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f5f5f5;
  margin: 30rpx 0
}

.product-item .item-img {
  width: 100%;
  height: 200rpx;
  position: relative;

}

.pruduct-item .user_name{
  margin: 0 20rpx;
  display: inline-block;
}
.product-item .item-img image {
  width: 100%;
  height: 100%;
}

.product-item .item-body {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  position: relative;
}

.product-item .item-body .item-title {
  font-size: 36rpx;
  color: #474245;
  width: 100%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin: 10rpx 0

}

.product-item .item-body .item-tag text {
  display: inline-block;
  font-size: 12px;
  border-radius: 2rpx;
  border: 1rpx rgb(245, 159, 193) solid;
  color: rgb(245, 159, 193);
  padding: 0 4rpx;
}

.product-item .item-body .item-des {
  font-size: 13px;
  color: #969696;
  width: 100%;
  padding: 10rpx 0 20rpx 0

}
.product-item .item-body .item-price .small{
  font-size: 12px;
  color:#FF5757;
}
.product-item .price{
  font-size: 16px;
  color:#FF5757;
}

.product-item .user{
  font-size: 16rpx;
  color:#FF5757;
  color: #666;
  margin-top: 30rpx
}
.product-item .item-body .market-price{
  color:#969696;
  font-size: 12px;
  text-decoration:line-through;
  margin-left: 10rpx;
}

.buyer-list {
  text-align: right;


}



.buyer-list button{
  background: #49b34d;
  box-shadow: 0 3px 12px rgba(59,202,70,0.43);
  color:#fff;
  border-radius: 5px;
  padding:3rpx;
  width: 140rpx;
  font-size: 24rpx;
}

.item-avatar{
  position: relative;
}

.right{

  position: absolute;
  right: 10rpx;
  font-size: 24rpx;
  color: #666
}

.flex_box{
  display: flex;
}

.flex_item{

  flex: 1;
  box-shadow: 0 3px 12px rgba(59,202,70,0.43);
  color:#FFF;
}

.footer_bar{
  position: fixed;
  bottom: 0;
  width: 100%
}
.avatar-group{
  display: flex;
  padding-left: 10rpx;
}
.avatar-group .avatar{
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  border:4rpx solid #fff;
}
.ml-xs{
  margin-left: 6rpx;
}