/**index.wxss**/
.swiper-primary{
  width: 100%;
  height: 300rpx;
}
.swiper-primary image{
  width: 100%;
  height: 300rpx;
}
.product-item-container {
  padding: 0 20rpx;
  background-color: #fff;
  padding-bottom: 180rpx;
}

.product-item {
  background: #fff;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-flex;
  display: flex;
  -webkit-box-direction: normal;
  -webkit-box-orient: horizontal;
  -webkit-flex-direction: row;
  -moz-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -moz-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-flex: 1;
  -webkit-flex: 1 1 0;
  -moz-flex: 1 1 0;
  flex: 1 1 0;
  position: relative;
  box-sizing: border-box;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-item .item-img {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right: 20rpx;
}

.product-item .item-img image {
  width: 100%;
  height: 100%;
}

.product-item .item-body {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  position: relative;
}

.product-item .item-body .item-title {
  font-size: 15px;
  color: #474245;
  width: 100%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;

}

.product-item .item-body .item-tag text {
  display: inline-block;
  font-size: 12px;
  border-radius: 2rpx;
  border: 1rpx rgb(245, 159, 193) solid;
  color: rgb(245, 159, 193);
  padding: 0 4rpx;
}

.product-item .item-body .item-des {
  font-size: 13px;
  color: #969696;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.product-item .item-body .item-price .small{
  font-size: 12px;
  color:rgb(255, 72, 145);
}
.product-item .item-body .item-price .price{
  font-size: 16px;
  color:rgb(255, 72, 145);
}
.product-item .item-body .market-price{
  color:#969696;
  font-size: 12px;
  text-decoration:line-through;
  margin-left: 10rpx;
}
.add-goods{
  position: fixed;
  left:50%;
  margin-left:-50rpx;
  bottom:30rpx;
  background: rgb(255, 72, 145);
  color:#fff;
  width: 80rpx;
  height:80rpx;
  border-radius: 50%;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
}