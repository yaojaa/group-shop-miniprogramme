/**index.wxss**/
.flex{
  display: flex;
}
.container{
  padding-bottom: 100rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}
.location{
  padding:30rpx;
  font-size: 24rpx;
  background-color: #fff;
}
.product-item {
  padding: 30rpx;
  background: #fff;
  position: relative;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 20rpx;
}
.user_name{
  margin-left: 20rpx;
}
.item-title{
  font-size: 36rpx;
  font-weight: bold;
  padding: 20rpx 0 10rpx;
}
.item-des{
  font-size: 28rpx;
  line-height:1.5;
  color:#666;
}
.item-cover-box{
  margin-right: -15rpx;
  margin-top: 20rpx;
}
.item-cover-scroll{
  white-space:nowrap;
}
.item-cover{
  display: inline-block;
  width: 220rpx;
  height: 220rpx;
  margin-right: 15rpx;
}
.item-cover .cover{
  width: 220rpx;
  height: 220rpx;
  vertical-align: middle;
}
.buyer-list{
  margin-top: 20rpx;
}
.buyer-list button{
  background: #49b34d;
/*  box-shadow: 0 3px 12px rgba(59,202,70,0.43);*/
  color:#FFF;
}

.footer_bar{
  position: fixed;
  bottom: 0;
  width: 100%
}
.avatar-group{
  display: flex;
  padding-left: 10rpx;
}
.avatar-group .avatar{
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  border:4rpx solid #fff;
}
.ml-xs{
  margin-left: 6rpx;
}