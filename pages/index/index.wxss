/**index.wxss**/
page{
  height: 100vh;
}

.flex{
  display: flex;
}
.container{
  background-size: 100% auto;
  background-repeat: no-repeat;
}
.product-item-container{
  margin-top:180rpx;
  margin-bottom: 150rpx
}

.tit-slogan{
  margin-left: 10px
}

.small{
  font-size: 14px;
  color: #666
}
.location{
  padding:30rpx;
  font-size: 24rpx;
  background-color: #fff;
}
.product-item {
  margin: 20rpx;
  padding: 25rpx;
  background: #f9f9f9;
  position: relative;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  border-radius: 5px;
  box-shadow: 0 3px 8px #f3f3f3;

}
.user_name{
  margin-left: 20rpx;
}
.item-title{
  font-size: 36rpx;
  padding: 20rpx 0 10rpx;
  color: #333
}
.item-des{
  font-size: 28rpx;
  line-height:1.5;
  color:#666;
}
.item-cover-box{
  margin-right: -15rpx;
  margin-top: 20rpx;
}
.item-cover-scroll{
  white-space:nowrap;
}
.item-cover{
  display: inline-block;
  width: 220rpx;
  height: 220rpx;
  margin-right: 15rpx;
}
.item-cover .cover{
  width: 220rpx;
  height: 220rpx;
  vertical-align: middle;
  border-radius: 3px
}
.buyer-list{
  margin-top: 20rpx;
}
.buyer-list button{
  background: #49b34d;
/*  box-shadow: 0 3px 12px rgba(59,202,70,0.43);*/
  color:#FFF;
}

.footer_bar{
  position: fixed;
  bottom: 0;
  width: 100%
}
.avatar-group{
  display: flex;
  padding-left: 10rpx;
}
.avatar-group .avatar{
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  border:4rpx solid #fff;
}
.ml-xs{
  margin-left: 6rpx;
}