<!--index.wxml-->
<view class="container">

  <view class="location">
    <i-icon type="coordinates_fill" /> {{userloaction.city}} {{userloaction.district}}  {{userloaction.street_number}}  
  </view>

  <view class='product-item-container'>
    <block wx:for="{{proList}}" wx:key="{{index}}">
    <view class='product-item' bindtap="toDetail" data-post-id="{{item.id}}">
     
      <view class='item-body'>
        <view class="item-avatar">
          <i-avatar src="https://i.loli.net/2017/08/21/599a521472424.jpg" size="default"></i-avatar>  {{item.user_name}}

          <view class="right">剩余5小时22分</view>
        </view>
        <view class='item-title'><text>{{item.title}}</text> <text class="small">￥</text><text class='price'>{{item.price}}</text></view>
        <view class='item-des'><text>{{item.info}}</text></view>
        <view class='item-tag'><text>{{item.tag}}</text></view>

        <view class="flex_box">

        <view class='item-img flex_item' wx:for-key="idx" wx:for-item="im"  wx:for="{{item.img_list}}">
        <image width="100" src="{{im}}"></image>
       </view>
          
        </view>

       


      </view>
    </view>
    </block>
  </view>
<!--   <view class='add-goods' bindtap='addGoods'>
  <text>+发布</text>
  </view> -->
<view class="footer_bar"> 
  <i-tab-bar current="{{ 1 }}" color="#f759ab" bindchange="handleChange">
    <i-tab-bar-item key="homepage" icon="homepage" current-icon="homepage_fill" title="附近"></i-tab-bar-item>
    <i-tab-bar-item key="remind" icon="add" current-icon="add" title="发布"></i-tab-bar-item>
    <i-tab-bar-item key="mine" icon="mine" current-icon="mine_fill" title="我的"></i-tab-bar-item>
</i-tab-bar>
</view>

</view>