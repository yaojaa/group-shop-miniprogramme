    <view class='product-item-container'>
    <view class="no-content" wx:if="{{!isloading&&proList.length==0}}">
        <view class="img">
                   <image mode="widthFix" src="https://img.zcool.cn/community/01d35d5a937512a8012045b360ae12.jpg@1280w_1l_2o_100sh.jpg" /> 
        </view>

        <view class="no-txt">什么也没有发现</view>
        <button bindtap="openSetting" wx:if="{{showOpenBtn}}">开启定位</button>
    </view>

    <view class="loading" wx:if="{{isloading}}">
        <view class="figure">
    <view class="dot white"></view>
    <view class="dot"></view>
    <view class="dot"></view>
    <view class="dot"></view>
    <view class="dot"></view>
</view>
    </view>



        <block wx:for="{{proList}}" wx:key="{{index}}">
            <view class='product-item'  >
                <view class='item-body'>
                    <view class="clearfix">
                        <view class="item-avatar">
                            <navigator url="../userhome/index">
                            <image class="avatar" src="{{item.user.headimg}}" />
                        </navigator>
                        </view>

                        <view class="item-name">
                             <text class="f14">{{item.user.nickname}}</text>
                            <view class="time f12px text-muted">剩余时间：{{item._expires.countdown.day}}天
                            {{item._expires.countdown.hour}}小时
                        {{item._expires.countdown.min}}分
                  </view>
                        </view>


                        <view class="right-info" wx:if="{{item.distance}}">
                            <i-icon type="coordinates" color="#999" /><text class="f12 text-muted">{{item.distance}}</text></view>
                    </view>
                    <view class='item-title' data-id="{{item.goods_id}}" bindtap="toDetail"><text>{{item.goods_name}}</text> <text class="small f12 text-red">￥</text>

<text class='text-red'>{{item.price_range.min}}~{{item.price_range.max}}</text>
                </view>
                    <view class='item-des'><text>{{item.goods_content}}</text></view>
                    <view class="item-cover-box" data-id="{{item.goods_id}}" bindtap="toDetail">
                        <block wx:if="{{item.goods_images.length == 1}}">
                         <view class="item-img-box-one">

                           <image mode="widthFix" class="cover1" src="{{item.goods_images[0].img_url}}"></image>
                       </view>
                        </block>

                         <block wx:if="{{item.goods_images.length == 2}}">

                             <view class='item-img-box-tow' wx:for-key="idx" wx:for-item="im" wx:for="{{item.goods_images}}" wx:key="{{index}}">
                                <image  mode="widthFix" class="cover" src="{{im.img_url}}"></image>
                            </view>


                            
                        </block>

                        <block wx:if="{{item.goods_images.length == 3}}">

                             <view class='item-img-box-three' wx:for-key="idx" wx:for-item="im" wx:for="{{item.goods_images}}" wx:key="{{index}}">
                                <image  mode="widthFix" class="cover" src="{{im.img_url}}"></image>
                            </view>
                            
                        </block>

                        <block wx:if="{{item.goods_images.length >= 4}}">

                            <view class='item-img-box-tow' wx:for-key="idx" wx:for-item="im" wx:for="{{item.goods_images}}" wx:key="{{index}}" wx:if="{{index<=3}}">
                                <image  mode="widthFix" class="cover" src="{{im.img_url}}"></image>
                            </view>
                            
                        </block>







                       <!--  <scroll-view class="item-cover-scroll" scroll-x>
                            <view class='item-cover' wx:for-key="idx" wx:for-item="im" wx:for="{{item.img_list}}" wx:key="{{index}}">
                                <image class="cover" src="{{im}}"></image>
                            </view>
                        </scroll-view> -->



                    </view>
                    <view class="buyer-list text-justify">
                        <view class="flex-box align-center">
                            <view class="avatar-group">
                                <image class="avatar" wx:for-item="it" src="{{it.headimg}}" wx:for="{{item._buy_users}}" wx:key="index"></image>
                            </view>
                            <view class="user text-muted f12 ml-xs"><text class="text-red">{{item._buy_users_count}}</text>人参与 </view>
                        </view>
                    </view>
                </view>
            </view>
        </block>

        <block>
            <view class="frind-list">
        <view class="tit bold f14">朋友都在团</view>

        <view class="case-hd"  wx:for="{{friendList}}" wx:key="{{index}}">
        <image src="{{item.headimg}}" class="avatar"></image>
        <view class="shop-info">
            <view class="title">
                <view class="name">{{item.nickname}}
                  </view>
                <view class="right">
                    <view class="date">{{item.addtime}}</view>
                    <view class="iconfont icon-right text-sm text-muted"></view>
                </view>
            </view>
            <view class="address">
              参团了 <text class="bold"> {{item.goods_name}}  </text>
                    {{item.spec_name}}   +{{item.qty}}
            </view>
        </view>
    </view>



            </view>
        </block>
    
   <!--     <navigator url="../wxgroup/index"> <i-divider content="没有更多了,试试查找附近的团购群"></i-divider> </navigator> -->


    </view>


    <!--   <view class='add-goods' bindtap='addGoods'>
  <text>+发布</text>
  </view> -->
    <view class="footer_bar">
        <i-tab-bar current="nearby" color="#188f00" bindchange="handleTabBarChange">
            <i-tab-bar-item key="nearby" icon="browse" current-icon="browse_fill" title="发现"></i-tab-bar-item>
            <i-tab-bar-item key="publish" icon="add" current-icon="add" title="发布"></i-tab-bar-item>
            <i-tab-bar-item key="home" icon="mine" current-icon="mine_fill" title="我的"></i-tab-bar-item>
        </i-tab-bar>
    </view>
</view>