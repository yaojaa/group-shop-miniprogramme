<view class="container">
                
                <view class="center">
                     <view class='img2'>
                    <open-data type="userAvatarUrl"></open-data>
                     </view>


                </view>

               
                      


    <view class='content'>

        <view class='header'>
            <view class='title'> {{create_number}}. <open-data type="userNickName"></open-data>已参团 +1</view>
        </view>

        <view class="imglist" wx:if="{{onshare}}">

           <view class='left'><image class="photos"  src="{{order.order_detail[0].goods_cover}}?imageView2/2/w/66/h/66/format/jpg/q/75"></image> </view>
           <view class='right'>{{goods_name}}</view>

            
        </view> 


        <view class='order' wx:if="{{!onshare}}">
                  <view class='title'>  
                  {{goods_name}}</view>

            <view class="goodsList">
                <view class='goods' wx:for="{{order.order_detail}}" wx:key="@index">
                    <view class='cell'>
                        <view class='left'>{{item.spec_name}} x {{item.qty}}</view>
                        <view class='right'><text>￥</text>{{(item.spec_price*100*item.qty)/100}}</view>
                    </view>
                </view>
            </view>
   <view class="user">
        <view class='img'>
                   <image class="photos-mini"  src="{{order.order_detail[0].goods_cover}}?imageView2/2/w/66/h/66/format/jpg/q/75"></image>
             </view> 
                <view class='name'>
                    <open-data type="userNickName"></open-data>
                </view>
                <view class='date'>{{order_time}}</view>
            </view>
            <view class='line'></view>
            <view class='paycell'>
                <view class='pay'>
                    <view class='left'>总金额</view>
                    <view class='right'><text>￥</text>{{order.total_price}}</view>
                </view>
                <view class='icon'>
                    <view></view>
                    <view></view>
                    <view></view>
                    <view></view>
                </view>
            </view>
        </view>
    </view>

    <view class='share'>
        <button class="linenear_bg" hove-class="linenear_bg_hover" type='primary' open-type="share">分享告知</button>
    </view>
    <view class='share'>
        建议支付后告知一下，以免遗漏～
  </view><view></view>
  
</view> 