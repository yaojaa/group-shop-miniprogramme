@import "../../css/common.wxss";
page{
  background: #ffffff
}

.scroll-view{
  height: 100%;
}
.background{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 180px;
  z-index: -1;
  /* background-color: #49b34d; */
  /* display: none; */
}
.background image{
  width: 100%;
