}
.content{
  height: 100%;
}
.header{
 align-items: center;
  text-align: center;
  display: block;
}
.header .title{
  font-size: 40rpx;
  color: #ff7200;
  font-weight:bold;
 margin-bottom:25rpx;
 text-overflow: ellipsis;
 word-break: keep-all;
 white-space: nowrap;

}
.order{
  margin: 25px 20px;
  background-color: #f7efe3;
  border-radius: 8px;
  overflow-x: hidden;
  /*border:1px solid #fff9ee*/
}
.order .title{
  font-size: 32rpx;
  line-height: 1.7;
  margin:0  20px;
  font-weight: bold;
  border-bottom: 1px dotted #ccc;
  padding: 8rpx 0
}
.line{
  position: relative;
  height: 0;
  font-size: 0;
  border-top: 1px dotted #ccc;
  margin: 0 20px;
}
.line::before
,.line::after{
  position: absolute;
  top: -7px;
  width: 12px;
  height: 12px;
  background-color: #fff;
  content: "";
  border-radius: 50%;
}
.line::before{
  left: -26px;
}
.line::after{
  right: -26px;
}
.goodsList{
  padding: 5px 20px;
  overflow-y: auto;
}
.goodsList .goods{
  padding: 5px 0;
  font-size: 16px;
}
.goodsList .goods .cell{
  display: flex;
  justify-content: space-between;
  line-height: 20px;
}
.goodsList .goods .cell .left{
  width: 100px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex-grow: 1;
}
.goodsList .goods .cell .right{
  font-size: 14px;
}
.goodsList .goods .cell .right text{
  font-size: 12px;
}
.goodsList .goods .des{
  font-size: 12px;
  color: #999;
  line-height: 18px;
}
.goodsList .goods .des .right{
  font-size: 12px;
}
