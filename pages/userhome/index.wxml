    <view class="goods-box">
        <navigator open-type="redirect" url="../goods/goods?goods_id={{item.goods_id}}" data-id="{{item.goods_id}}" class="goods-item " wx:for="{{goodsList}}" wx:key="index">
            <view class="title text-hide">{{item.goods_name}}</view>
            <view class="flex-box">
                <view class="cover">
                    <image class="cover" src="{{item.goods_cover}}-200"></image>
                </view>
                <view class="content">
                    <view class="des text-hide three">{{item.goods_content}}</view>
                    <view class="bottom text-justify">
                        <view class="price bold text-red"><text class="f12">￥</text> {{item._price_range.min}} </view>
                        <text class="gray">{{item._buy_users_count}}人参与</text>
                        <view>
                            <button wx:if="{{item.goods_expires ==1 }}" data-id="{{item.goods_id}}" class="btn buy linenear_bg"> 立即参与</button>
                            <button wx:if="{{item.goods_expires ==3 }}" data-id="{{item.goods_id}}" class="btn ">已结束</button>
                        </view>
                    </view>
                </view>
            </view>
            <!--            <view class="flex-box align-center" style="padding: 10px 0">
                    <view class="avatar-group">
                        <image class="avatar" src="{{user.headimg}}" wx:for-item="user" wx:for="{{item._buy_users}}" wx:key="index"></image>
                    </view>
                    <view class="user f12 ml-xs text-muted"><text class="text-red">{{item._buy_users_count}}</text>人参与</view>
                </view> -->
        </navigator>
        <view wx:if="{{goodsList.length ==0 && !loading}}" class="text-center white-bg" style="padding: 100px 0">
            暂无内容
        </view>
    </view>
    <view class="text-center mb-sm">
        <wux-spin wx:if="{{loading}}"></wux-spin>
    </view>
    <van-popup custom-class="authPopBox" show="{{ showAuth }}">
        <view class="logo">
            <image class="avatar" src="{{info._user.headimg}}" />
        </view>
        <view class="info">
            您好，请允许获取公开信息
        </view>
        <button size="default" type="primary" plain="false" open-type="getUserInfo" bindgetuserinfo="getUserInfoEvt">授 权</button>
    </van-popup>
    <van-action-sheet show="{{ sharebar }}" close-on-click-overlay overlay="{{overlay}}" title="分享到" bind:close="closeShareFriends">
        <view class="flex text-center p-xl ">
            <button class="flex-sub btn-reset" open-type="share">
                <image src="https://static.kaixinmatuan.cn/staitc-img/wx_icon.png" class="img-lg"></image>
                <view class="text-weak mt-sm text-df">微信好友</view>
            </button>
            <view bindtap='handlePoster' class="flex-sub share-pyq">
                <image src="https://static.kaixinmatuan.cn/staitc-img/quan_icon.png" class="img-lg"></image>
                <view class="text-weak mt-sm">生成海报</view>
            </view>
        </view>
    </van-action-sheet>
    <view hidden="{{ !poster }}" class="share-friends-box">
        <view class='share-friends-img' bindtap='handlePoster'>
            <view class="share-img-box" wx:if="{{!shareFriendsImg}}">
                <i-spin i-class='share-friends-loading' fix size="large"></i-spin>
                <view class='share-friends-loading-txt'><text>努力生成中,请稍等...</text></view>
            </view>
            <view class="text-center share-img-box" wx:else>
                <image class='icon-img' src='{{shareFriendsImg}}' mode='aspectFit'></image>
                <button class="btn primary linenear_bg round lg" catchtap="savaSelfImages"> 保存海报 </button>
            </view>
        </view>
    </view>
    <view class="weui-footer">
        <view class="weui-footer__links">
            <button size="mini" class="btn_no_style" open-type="contact" bindcontact="handleContact">咨询 建议 投诉</button>
        </view>
        <view class="weui-footer__text">Copyright © 20018-2025</view>
    </view>
    <van-dialog id="contact" use-slot>
        <van-cell-group border="{{false}}" custom-class="mv-df">
            <van-cell title="手机号：{{phone}}" value="拨号" is-link icon="phone-o" title-width="400rpx" bindtap="phoneCall" wx:if="{{phone}}" />
            <van-cell border="{{false}}" title="微信号：{{weChat}}" value="复制" is-link icon="chat-o" title-width="400rpx" bindtap="copyWx" wx:if="{{weChat}}" />
        </van-cell-group>
    </van-dialog>
</view>