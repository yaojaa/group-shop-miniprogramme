<i-custom-bar showBackIcon="{{true}}" backIconColor="#333333" backColor="#fff" title="个人信息"> </i-custom-bar>
<view class="container ">
    <view class="info-box ">
        <i-panel title="完善联系方式">
            <wux-cell-group>
                <wux-cell hover-class="none">
                    <wux-input bind:blur="postInfo"   controlled clear label="手机号" bind:change="changeMobile"  placeholder="输入您的手机号" value="{{mobile}}" />
                       <button  open-type="getPhoneNumber" size="mini" bindgetphonenumber="getPhoneNumber" class="getMobile">微信绑定的手机号</button>

                </wux-cell>
                <wux-cell hover-class="none">
                    <wux-input bind:blur="postInfo" controlled clear value="{{wechatnumber}}" label="微信" bind:change="changeWX" placeholder="输入您的微信号" />
                </wux-cell>
                <wux-cell hover-class="none" title="收货地址" is-link url="../address/index" ></wux-cell>
            </wux-cell-group>
            
           
        </i-panel>
    </view>
   
       <view class='btn-wrap'>
        <button type="danger" class="linear_bg" bindtap="clearStorage">清除缓存 重新登录</button>
    </view>
    <i-message id="message" />
</view>