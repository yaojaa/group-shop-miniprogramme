}
.body{
  position: fixed;
  left: 0;
  top: 0;
  bottom: 60px;
  right: 0;
}
.scroll-view{
  height: 100%;
}
.background{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 180px;
  z-index: -1;
  /* background-color: #49b34d; */
  /* display: none; */
}
.background image{
  width: 100%;
  height: 100%;
}
.content{
  height: 100%;
  padding: 0 15px 125px;
}
.header{
  display: flex;
  align-items: center;
  height: 130px;
}
.header .title{
  font-size: 24px;
  color: #fff;
}
.order{
  margin-top: 5px;
  background-color: #f7efe3;
  border-radius: 8px;
  overflow-x: hidden;
}
.order .title{
  font-size: 16px;
  height: 40px;
  line-height: 40px;
  padding:0  20px;
  font-weight: bold;
}
.line{
  position: relative;
  height: 0;
  font-size: 0;
  border-top: 1px dotted #ccc;
  margin: 0 20px;
}
.line::before
,.line::after{
  position: absolute;
  top: -7px;
  width: 12px;
  height: 12px;
  background-color: #fff;
  content: "";
  border-radius: 50%;
}
.line::before{
  left: -26px;
}
.line::after{
  right: -26px;
}
.goodsList{
  padding: 5px 20px;
  height: 128px;
  overflow-y: auto;
}
.goodsList .goods{
  padding: 5px 0;
  font-size: 16px;
}
.goodsList .goods .cell{
  display: flex;
  justify-content: space-between;
  line-height: 20px;
}
.goodsList .goods .cell .left{
  width: 100px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex-grow: 1;
}
.goodsList .goods .cell .right{
  font-size: 14px;
}
.goodsList .goods .cell .right text{
  font-size: 12px;
}
.goodsList .goods .des{
  font-size: 12px;
  color: #999;
  line-height: 18px;
}
.goodsList .goods .des .right{
  font-size: 12px;
}

.paycell .pay{
  display: flex;
  justify-content: space-between;
  line-height: 30px;
  padding: 0 20px;
}
.paycell .pay .left{
  font-size: 16px;
  color: #999;
}
.paycell .pay .right{
  font-size: 26px;
  font-weight: bold;
}
.paycell .pay .right text{
  color: #999;
  font-size: 14px;
  vertical-align:super;
  font-weight: normal;
}
.paycell .icon{
  display: flex;
  height: 5px;
  overflow: hidden;
  justify-content: space-around;
  padding: 2px 5px 0;
}
.paycell .icon view{
  height: 10px;
  width: 10px;
  background-color: #fff;
  border-radius: 50%;
}

.share{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
}
.share button{
  border-radius: 0;
}

.user{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px dotted #ccc;
  padding: 10px 0;
  margin: 0 20px;
  font-size: 16px;
}
.user .img{
  height: 40px;
  width: 40px;
  border-radius: 50%;
  overflow: hidden;
}
.user .name{
  width: 100px;
  flex-grow: 1;
  padding-left: 10px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}




.painter{
  display: flex;
  justify-content: center;
}









