<view class="container">
    <view class="head-box">
        <view class="msg-tips">
            <!-- <i-badge count="3">
                <i-icon type="remind" size="20" color="#fff" />
            </i-badge> -->
        </view>
        <navigator url="../identify/identify">
        <view class="userinfo">
            <image class="userinfo-avatar" src="{{userInfo.head_pic}}" mode="cover"></image>
            <view class="userinfo-bd">
                <text class="userinfo-nickname">{{userInfo.nickname}} </text>
                                <text class="userinfo-nickname">完善信息</text>

            </view>
        </view>
    </navigator>
        <view class='add-goods' bindtap="new_btn">
            <i-icon type="add" size="20" />
            <text>发布商品</text>
        </view>
    </view>
    <view class="count-box">
        <view class="count-item">
            <text class="label">我参与的</text>
            <text class="num">2</text>
        </view>
           <view class="count-item">
            <text class="label">我发布的</text>
            <text class="num">0</text>
        </view>
        <view class="count-item">
            <text class="label" bindtap="fansPage">金额</text>
            <text class="num">0</text>
        </view>
     
    </view>


<i-panel title="我参与的">
    <view style="padding: 5px 10px;">

         <view class='order' wx:for="{{orders}}" wx:key="id">
      <view class='title'>{{item.goods.goods_name}} <text> 订单{{['待确认','已确认','已收货','已取消','已完成','已作废'][item.order_status]}}
</text> </view>
      <!-- <view class='line'></view> -->
      <view class="goodsList" wx:for="{{item.order_goods}}" wx:for-item="order" wx:key="@index">
        <view class='goods'>
          <view class='cell'>
            <view class='left'>{{order.spec_key_name}} x {{order.goods_num}}</view>
            <view class='right'><text>￥</text>{{item.goods_price}}</view>
          </view>
        
        </view>
    
     
      </view>
      <view class="user">
        <view class='name'>{{item.consignee}}</view>
        <view class='date'>2018-08-12</view>
      </view>
      <view class='line'></view>
      <view class='paycell'>
        <view class='pay'>
          <view class='left'>   {{['待支付','已支付','支付失败'][item.pay_status]}}   <i-button wx:if="{{item.pay_status!==1}}" type="primary" size="small" long="{{true}}">去支付</i-button></view>
          <view class='right'>￥{{item.goods_price}}</view>
        </view>
        <view class='icon'>
         
        </view>
      </view>
  </view>



    </view>
</i-panel>


   <view wx:if="{{goodslist.length == 0}}">
         <view class='new-goods' bindtap="new_btn">
            <i-icon type="add" size="22" />
            <text>发布一个商品</text>
        </view>
   </view>

<i-panel title="我发布的" wx:if="{{goodslist.length > 0}}">
    <view >
        <view  class="goods-box">
            <view class="goods-item" wx:key="{{goods_id}}" wx:for="{{goodslist}}">
                <view class="goods-body">
                    <navigator url="../goods/goods?goods_id={{item.goods_id}}">
                        <image src='{{item.original_img}}' class='hd'></image>
                    </navigator>
                    <view class="bd">
                        <view class="tit">{{item.goods_name}}</view>
                        <view class="link">
                          <button size="mini" bindtap="editPage" data-url="{{item.goods_id}}">编辑修改</button>
                            <button size="mini" bindtap="detailPage" data-url="{{item.goods_id}}">订单管理</button>

                           


                        </view>
                    </view>
                    <view class="fd">开团中</view>
                </view>
                <view class="goods-count">
                    <view class="count-item">
                        <text class="label">浏览次数</text>
                        <text class="num">100</text>
                    </view>
                    <view class="count-item">
                        <text class="label">订单数量</text>
                        <text class="num">100</text>
                    </view>
                  
                    <view class="count-item">
                        <text class="label">收款总额</text>
                        <text class="num">￥3423</text>
                    </view>
                </view>
            </view>
        </view>
    </view>
</i-panel>



</view>