<view class="container">
    <view class="collect-tips" bindtap="closleTips" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;" wx:if="{{show_tips}}"><view class="collect-box">"点击右边 <van-icon name="weapp-nav" size="28rpx;" /> 添加到我的小程序" <van-icon name="close" size="28rpx;" /></view></view>
    <view class="head-box">
        <i-row>
            <i-col offset="1" span="4" i-class="col-class">
                <navigator   url="../identify/identify">
                    <view class="user-avatar">
                        <image class="user-avatar" src="{{userInfo.headimg}}" />
                        <view class="set-icon">
                            <i-icon type="setup_fill" color="#ffa70f" size="16" />
                        </view>
                    </view>
                </navigator>
            </i-col>
            <i-col span="10" i-class="col-class">
                <view class="user-name f18" bindtap="goSite">{{userInfo.nickname}}                     <i-icon type="homepage_fill" size="22" color="#ffffff" />
</view>
                <navigator   url="../identify/identify">
                    <view class="user-account f12">完善资料</view>
                </navigator>
            </i-col>
            <i-col offset="1"  span="7" i-class="col-class">
                <navigator   url="../withdrawal/index">


                <view class="take_money">
                 <view class="pending_money f16"> ¥ {{pending_money}}</view>
                    <view class="user-account f12">账户提现 
                        <i-icon type="enter" size="12" color="#ffffff"  />
                    </view>
               </view>
                </navigator>

            </i-col>

       


        </i-row>
    </view>
    <i-panel i-class="marginTop" title="我参与的" extra="查看全部" link="../order-list/index">
        <view slot="content">
            <view class="flex-box myorder">
                 

                <navigator url="../order-list/index?search_status=1" hover-class="none" class="flex-item">
                    <view class="icon">
                        <i-icon type="redpacket" size="28" color="#4fac05" />
                    </view>
                    待付款
                    <view class="badge" wx:if="{{waitpay>0}}">{{waitpay}}</view>
                </navigator>
             
                <navigator url="../order-list/index?search_status=2" hover-class="none" class="flex-item">
                    <view class="icon">
                        <i-icon type="service" size="28" color="#4fac05" />
                    </view>
                    待收货<view class="badge" wx:if="{{waitreceived>0}}">{{waitreceived}}</view>
                </navigator>
                <navigator url="../order-list/index?search_status=3" hover-class="none" class="flex-item">
                    <view class="icon">
                        <i-icon type="interactive" size="28" color="#4fac05" />
                    </view>
                    已完成
                </navigator>
                <!--             <view class="flex-item">
             <view class="icon">
                    <i-icon type="customerservice" size="28" color="#4fac05" />
                </view>
            退款售后</view> -->
            </view>
        </view>
    </i-panel>
    <i-panel wx:if="{{orderList.length}}" hide-border title="最新订单" extra="更多" link="../new-order-list/index">
        <view class="control">
            
            <view class="newlist">
                <view class="item" wx:for="{{orderList}}" 
                data-id="{{item.order_detail[0].goods_id}}" 
                data-delivery_method="{{item.delivery_method}}"
                data-name="{{item.order_detail[0].goods_name}}"

                bindtap="managePage">
                    <text class="bold">{{item.user.nickname}}</text>                     {{item.time_ago}}
 参与了你的 
                    <text class="bold">{{item.order_detail[0].goods_name}}</text>
                </view>
                   <button class='pubbtn' bindtap="new_btn">
          <i-icon type="add" size="20" />发布一个
        </button>
            </view> 
     
        </view>

    </i-panel>
    <view class="text-center">
        <wux-spin wx:if="{{is_loading}}"></wux-spin>
    </view>

    <view class="panelbox">
      <!--   <button class='new-btn hollow' bindtap="new_btn">
          <i-icon type="add" size="20" />新发布
        </button> -->
    <i-panel title="我发布的"   wx:if="{{goodslist.length > 0}}">

        

        <view class="goods-box">
            <block wx:key="{{goods_id}}" wx:for="{{goodslist}}">
                <i-goods-item bindrecommend="recommendHandle" bindremove="removeHandle" item="{{item}}" index="{{index}}" />
            </block>
            <view class="text-center">
                <wux-spin wx:if="{{is_loading}}"></wux-spin>
            </view>
        </view>
    </i-panel>
    </view>
    <i-panel wx:if="{{goodslist.length== 0 && !is_loading }}">
        <view class='new-goods' bindtap="new_btn">
            <text>+ 发布一个 </text>
        </view>
    </i-panel>
    <view style="margin-bottom:100rpx"></view>
