<view class="container">
    <view class="collect-tips" bindtap="closleTips" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;" wx:if="{{show_tips}}">
        <view class="collect-box">"点击右边
            <van-icon name="weapp-nav" size="28rpx;" /> 添加到我的小程序"
            <van-icon name="close" size="28rpx;" />
        </view>
    </view>
    <view class="head-box flex">
        <navigator url="../identify/identify" hover-class="none">
            <view class="user-avatar mh-df">
                <image class="user-avatar" src="{{userInfo.headimg}}" />
                <view class="set-icon">
                    <i-icon type="setup_fill" color="#ffa70f" size="16" />
                </view>
            </view>
        </navigator>
        <view class="flex-sub">
            <view class="text-justify">
                <view class="flex align-center">
                    <view class="user-name mr-sm" bindtap="goSite">{{userInfo.nickname}}
                        <!--  <i-icon wx:if="{{!isCustome}}" type="homepage_fill" size="22" color="#ffffff" /> -->
                    </view>
                    <navigator url="../identify/identify" class="mini-tag" hover-class="none">完善资料
                    </navigator>
                </view>
                <navigator url="../userhome/index?id={{userInfo.store_id}}" class="home-side flex align-center" hover-class="none" wx:if="{{!isCustome}}">
                    <i-icon type="homepage_fill" size="20" color="#ffffff" />
                    <view class="text-white ml-xs">
                        个人主页</view>
                </navigator>
            </view>
            <view class="flex mt-xs text-white text-sm">
                <navigator url="../fans-mg/index" hover-class="none">我的粉丝（{{fansNum}}）</navigator>
                <text class="pr-sm">|</text>
                <navigator url="../withdrawal/index" hover-class="none"> 账户余额 ¥ {{pending_money}}</navigator>
            </view>
        </view>
    </view>
    <i-panel i-class="marginTop" title="我参与的" extra="查看全部订单" link="../order-list/index">
        <view slot="content">
            <view class="flex-box myorder">
                <navigator url="../order-list/index?search_status=1" hover-class="none" class="flex-item">
                    <view class="icon">
                        <i-icon type="redpacket" size="28" color="#4fac05" />
                    </view>
                    待付款
                    <view class="badge" wx:if="{{waitpay>0}}">{{waitpay}}</view>
                </navigator>
                <navigator url="../order-list/index?search_status=2" hover-class="none" class="flex-item">
                    <view class="icon">
                        <i-icon type="service" size="28" color="#4fac05" />
                    </view>
                    待收货<view class="badge" wx:if="{{waitreceived>0}}">{{waitreceived}}</view>
                </navigator>
                <navigator url="../order-list/index?search_status=3" hover-class="none" class="flex-item">
                    <view class="icon">
                        <i-icon type="interactive" size="28" color="#4fac05" />
                    </view>
                    已完成
                </navigator>
                <!--             <view class="flex-item">
             <view class="icon">
                    <i-icon type="customerservice" size="28" color="#4fac05" />
                </view>
            退款售后</view> -->
            </view>
        </view>
    </i-panel>
    <i-panel>
        <block wx:for="{{proList}}" wx:if="{{isCustome}}" wx:key="{{index}}">
            <view class='product-item'>
                <view class='item-body'>
                    <navigator class="flex align-center pb-sm van-hairline--bottom " url="../userhome/index?id={{item.store.store_id}}" hover-class="none">
                        <view class="item-avatar">
                            <image class="avatar" src="{{item.user.headimg}}" />
                        </view>
                        <view class="item-name flex-sub">
                            <view class="text-justify">
                                <text class="f14">{{item.user.nickname}}</text>
                                <view class="right-info">
                                    <i-icon type="homepage_fill" color="#999" /><text class="f12 text-muted">去主页逛逛</text></view>
                            </view>
                            <view class="time text-xs text-muted">剩余时间：{{item._expires.countdown.day}}天
                                {{item._expires.countdown.hour}}小时
                                {{item._expires.countdown.min}}分
                            </view>
                        </view>
                    </navigator>
                    <view class='item-title' data-id="{{item.goods_id}}" bindtap="toDetail">
                        <text>{{item.goods_name}}</text>
                        <!--     <text class='text-red' wx:if="{{item.price_range.min == item.price_range.max}}">￥{{item.price_range.min}}</text><text class="text-red" wx:else>￥{{item.price_range.min}}~{{item.price_range.max}}</text> -->
                    </view>
                    <view class="item-cover-box" data-id="{{item.goods_id}}" bindtap="toDetail">
                        <block wx:if="{{item.goods_images.length == 1}}">
                            <view class="item-img-box-one">
                                <image mode="widthFix" class="cover" src="{{item.goods_images[0].img_url}}?imageView2/1/w/600/h/400/interlace/1"></image>
                            </view>
                        </block>
                        <block wx:if="{{item.goods_images.length == 2}}">
                            <view class='item-img-box-tow' wx:for-key="idx" wx:for-item="im" wx:for="{{item.goods_images}}" wx:key="{{index}}">
                                <image class="cover" mode="widthFix" src="{{im.img_url}}?imageView2/1/w/400/h/300/interlace/1"></image>
                            </view>
                        </block>
                        <block wx:if="{{item.goods_images.length >= 3}}">
                            <view class='item-img-box-three' wx:for-key="idx" wx:for-item="im" wx:for="{{item.goods_images}}" wx:key="{{index}}" wx:if="{{index<=2}}">
                                <image class="cover" mode="widthFix" src="{{im.img_url}}?imageView2/1/w/200/h/180/interlace/1"></image>
                            </view>
                        </block>
                        <!--  <scroll-view class="item-cover-scroll" scroll-x>
                            <view class='item-cover' wx:for-key="idx" wx:for-item="im" wx:for="{{item.img_list}}" wx:key="{{index}}">
                                <image  src="{{im}}"></image>
                            </view>
                        </scroll-view> -->
                    </view>
                </view>
            </view>
        </block>
    </i-panel>
    <i-panel wx:if="{{orderList.length}}" hide-border title="最新订单" extra="更多" link="../new-order-list/index">
        <view class="control">
            <view class="newlist">
                <scroll-view style="height: 100px" scroll-y>
                    <view class="item" wx:for="{{orderList}}" data-id="{{item.order_detail[0].goods_id}}" data-delivery_method="{{item.delivery_method}}" data-name="{{item.order_detail[0].goods_name}}" bindtap="managePage">
                        <text class="bold">{{item.user.nickname}}</text> {{item.time_ago}}
                        参与了你的
                        <text class="bold">{{item.order_detail[0].goods_name}}</text>
                    </view>
                </scroll-view>
                <button class='pubbtn' bindtap="new_btn">
                    <i-icon type="add" size="20" />发布一个
                </button>
            </view>
        </view>
    </i-panel>
    <view class="text-center">
        <wux-spin wx:if="{{is_loading}}"></wux-spin>
    </view>
    <view class="panelbox">
        <!--   <button class='new-btn hollow' bindtap="new_btn">
          <i-icon type="add" size="20" />新发布
        </button> -->
        <i-panel title="我发布的" wx:if="{{goodslist.length > 0}}">
            <view class="goods-box">
                <block wx:key="{{goods_id}}" wx:for="{{goodslist}}">
                    <i-goods-item bindrecommend="recommendHandle" bindremove="removeHandle" item="{{item}}" index="{{index}}" />
                </block>
                <view class="text-center">
                    <wux-spin wx:if="{{is_loading}}"></wux-spin>
                </view>
            </view>
        </i-panel>
    </view>
    <i-panel wx:if="{{isCustome && !is_loading }}">
        <view class='new-goods' bindtap="new_btn">
            <text>+ 发布商品 </text>
        </view>
    </i-panel>
    <view style="margin-bottom:100rpx"></view>
