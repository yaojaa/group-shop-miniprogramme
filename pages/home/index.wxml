                    </navigator> -->
                    <navigator url="../withdrawal/index" hover-class="none" class="text-center">
                        <view  class="text-lg bold"> ¥ {{pending_money}}</view>
                    </navigator>
                </view>
            </view>
        </view>
    </view>

   <view class="new_order" wx:if="{{orderList.length}}"> <button class="listen_btn hollow" bindtap="addListen">+订阅新订单提醒</button>
    <i-panel hide-border title="最新订单" extra="更多" link="../new-order-list/index">
        <view class="control"  >

            <view class="newlist">

                <scroll-view style="height: 100px" scroll-y>
                    <view class="item" wx:key="index" wx:for="{{orderList}}" data-id="{{item.order_id}}"  bindtap="todetail">
                        <text class="bold">{{item.user.nickname}}</text> {{item.time_ago}}
                        参与了你的
                        <text class="bold">{{item.order_detail[0].goods_name}}</text>
                    </view>
                </scroll-view>
            </view>
        </view>
    </i-panel>
    </view> 


    <view class="mt-xl">
                <button class="pubbtn" bindtap="new_btn">+ 新发布</button>
                    <navigator url="plugin-private://wx2b03c6e691cd7370/pages/live-player-plugin?room_id=5">                <button class="pubbtn">进入直播间</button>
</navigator>

    </view>



    <view class="text-center" style="padding: 120px" wx:if="{{is_loading}}">
        <wux-spin  wx:if="{{is_loading}}"></wux-spin>
    </view>
    <view class="panelbox">

      
        <!--   <button class='new-btn hollow' bindtap="new_btn">
