.container {
    background: #f8f8f8;
}

.head-box {
    background: #49b34d;
    position: relative;
    padding: 20px 15px;
}

.msg-tips{
    position: absolute;
    top:4px;
    right:15px;
}
.userinfo {
    color: #fff;
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    align-content: center;
    align-items:center;
}

.userinfo-avatar {
    width: 130rpx;
    height: 130rpx;
    display: inline-block;
    border-radius: 50%;
    margin-right: 10px;
}

.userinfo-nickname {
    display: block;
}

.userinfo-bd {
    -webkit-flex: 1;
    -moz-flex: 1;
    -ms-flex: 1;
    -o-flex: 1;
    flex: 1;
}

.new_btn {
    position: absolute;
    right: 10rpx;
    top: 170rpx
}

.count-box {
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    background: #fff;
}

.count-item {
    -webkit-flex: 1;
    -moz-flex: 1;
    -ms-flex: 1;
    -o-flex: 1;
    flex: 1;
    text-align: center;
    margin: 30rpx 0;
    border-right: 1rpx solid #f2f2f2;
}

.count-item .label {
    font-size: 24rpx;
    color: #666;
    display: block;
}

.count-item .num {
    font-size: 32rpx;
    color: #333;
    display: block;
    padding-top: 5rpx;
}

.goods-count {
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
}

.goods-item {
    background: #fff;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #f2f2f2;
    margin: 15px 10px;
    box-shadow: 1px 1px 3px #eee
}

.goods-body {
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    padding: 0 30rpx;
}

.goods-body .hd {
    width: 120rpx;
    height: 120rpx;
}

.goods-body .bd {
    margin: 0 20rpx;
    -webkit-flex: 1;
    -moz-flex: 1;
    -ms-flex: 1;
    -o-flex: 1;
    flex: 1;
}

.goods-body .bd .tit {
    font-size: 16px;
    color: #474245;
    width: 100%;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.goods-body .bd .link {
    padding-top: 20rpx;
}

.goods-body .bd .link text {
    font-size: 13px;
    color: #49b34d;
}

.goods-body .fd {
    color: #999;
    font-size: 28rpx
}

.goods-count .count-item {
    margin: 30rpx auto 0;
}

.goods-count .count-item .label {
    color: #999;
}

.goods-count .count-item .num {
    font-size: 28rpx;
    color: #666
}

.add-goods {
    position: absolute;
    right: 0;
    top:80rpx;
    background: #FFA14E;
    color: #fff;
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 30rpx 0 0 30rpx;
    text-align: center;
    font-size: 28rpx;
}
.link button{
    margin-right: 10px
}

