}

/**订单*/

.order{
  margin: 32rpx 0;
  background-color: #fffcf7;
  overflow: hidden;
  position: relative;
  box-shadow: inset 0px 0px 3px #ddd
}
.order .title{
  font-size: 28rpx;
  height: 86rpx;
  line-height: 86rpx;
  margin:0  10rpx;
  padding: 0 90rpx 0 10rpx;
  font-weight: bold;
  border-bottom: 1px dotted #ccc;
 overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}

.order .title .state{
  font-size: 12px;
  color: #999;
  position: absolute;
  right: 15rpx;
  top: 5rpx
}
.line{
  position: relative;
  height: 0;
  font-size: 0;
  border-top: 1px dotted #ccc;
  margin: 10px 5px;
}
.line::before
,.line::after{
  position: absolute;
  top: -7px;
  width: 12px;
  height: 12px;
  background-color: #fff;
  content: "";
  border-radius: 50%;
}
.line::before{
  left: -26px;
}
.line::after{
  right: -26px;
}
.goodsList{
  padding: 5px 20px;
  overflow-y: auto;
}
.goodsList .goods{
  padding: 5px 0;
  font-size: 16px;
}
.goodsList .goods .cell{
  display: flex;
  justify-content: space-between;
  line-height: 20px;
}
.goodsList .goods .cell .left{
  width: 100px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex-grow: 1;
}
.goodsList .goods .cell .right{
  font-size: 14px;
}
.goodsList .goods .cell .right text{
  font-size: 12px;
}
.goodsList .goods .des{
  font-size: 12px;
  color: #999;
  line-height: 18px;
}
.goodsList .goods .des .right{
  font-size: 12px;
}

.paycell .pay{
  display: flex;
  justify-content: space-between;
  line-height: 30px;
  padding: 10px 20px;
}
.paycell .pay .left{
  font-size: 16px;
  color: #999;
}
.paycell .pay .right{
  font-size: 26px;
  font-weight: bold;
}
.paycell .pay .right text{
  color: #999;
  font-size: 14px;
  vertical-align:super;
  font-weight: normal;
}
.paycell .icon{
  display: flex;
  height: 5px;
  overflow: hidden;
  justify-content: space-around;
  padding: 2px 5px 0;
}
.paycell .icon view{
  height: 10px;
  width: 10px;
  background-color: #fff;
  border-radius: 50%;
}

.user{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px dotted #ccc;
  padding: 10px;
  font-size: 22rpx;
}
.user .img{
  height: 40px;
  width: 40px;
  border-radius: 50%;
  overflow: hidden;
}
.user .name{
  width: 100px;
  flex-grow: 1;
  padding-left: 10px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}




