.price-input {
    border-bottom: 1px solid #efefef;
    width: 60%;
    border-radius: 5px;
    margin: 0 auto;
    text-align: center;
}

icon {
    display: block;
}

.state {
    text-align: right;
    color: #999;
    padding-right: 15rpx
}

.state.warning {
