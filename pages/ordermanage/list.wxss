@import "../../utils/weui.wxss";

.container{
  background: #f8f8f8;
  min-height:100vh;
}

.session {}

.search {
    display: flex;
    background: #efefef;
    padding: 10px 15px;
    align-items: center;
}

.search-button {
    width: 50px;
    height: 30px;
    line-height: 30px;
    text-align: right;
}

.search-button button {
    border: none;
    text-indent: 0;
    padding: 0;
    color: #ff4891;
}

.search-main {
    flex-grow: 1;
    height: 30px;
    display: flex;
    background-color: #fff;
    border-radius: 5px;
    align-items: center;
}

.search-main .icon {
    padding: 0 5px;
}

.search-main .input {
    flex-grow: 1;
    line-height: 30px;
}

.search-main .input input {
    display: block;
    width: 100%;
    font-size: 14px;
    min-height: 20px;
}

.goods_name {
    padding: 20rpx;
    font-size: 28rpx;
    word-break: keep-all;
    text-overflow: ellipsis;
    overflow: hidden;
    color: #999
}

.order-list {
    padding: 5rpx 0 10rpx;
    font-size: 28rpx;
    border-bottom: 1px solid #efefef;
    position: relative;
    background: #fff;
}

.header-line{
        padding-left: 62rpx

}

.order-list::before {
    content: '';
    left: 0;
    right: 0;
    top: 0;
    height: 1px;
    position: absolute;
    background: -webkit-repeating-linear-gradient(135deg, #F47530 0, #F47530 20%, transparent 0, transparent 25%, #c0e8d9 0, #c0e8d9 45%, transparent 0, transparent 50%);
    background: repeating-linear-gradient(-45deg, #F47530 0, #F47530 20%, transparent 0, transparent 25%, #c0e8d9 0, #c0e8d9 45%, transparent 0, transparent 50%);
    background-size: 80px;
}
.user-info{
    font-size: 38rpx;
    color: #666;

}

.list-h {
    line-height: 30px;
    padding: 0 10px;

}
.list-price{
    display: flex;
    background: #fffef6;
    color: #666;
    border-bottom: 1px dotted #eee;
    padding:8rpx 20rpx;
}

.list-price view {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    flex: 1;
    padding: 0 10px;
}


.list-h view {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    flex-grow: 1;
    padding: 15rpx 20rpx;
}

.list-p {
    line-height: 20px;
    padding: 4px 10px 0;
}

.list-button {
    padding: 18rpx;
}

.order-list:last-child {
    border: none;
}

.price-input {
    border-bottom: 1px solid #efefef;
    width: 60%;
    border-radius: 5px;
    margin: 0 auto;
    text-align: center;
}

icon {
