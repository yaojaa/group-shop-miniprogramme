@import "../../utils/weui.wxss";

.container{
  background: #f8f8f8;
  min-height:100vh;
}

.session {}

.search {
    display: flex;
    background: #efefef;
    padding: 10px 15px;
    align-items: center;
}

.search-button {
    width: 50px;
    height: 30px;
    line-height: 30px;
    text-align: right;
}

.search-button button {
    border: none;
    text-indent: 0;
    padding: 0;
    color: #ff4891;
}

.search-main {
    flex-grow: 1;
    height: 30px;
    display: flex;
    background-color: #fff;
    border-radius: 5px;
    align-items: center;
}

.search-main .icon {
    padding: 0 5px;
}

.search-main .input {
    flex-grow: 1;
    line-height: 30px;
}

.search-main .input input {
    display: block;
    width: 100%;
    font-size: 14px;
    min-height: 20px;
}

.goods_name {
    padding: 20rpx;
    font-size: 36rpx;
}

.order-list {
    padding: 10px 0;
    font-size: 14px;
    border-bottom: 1px solid #efefef;
    position: relative;
    background: #fff;
}

.order-list::before {
    content: '';
    left: 0;
    right: 0;
    top: 0;
    height: 2px;
    position: absolute;
    background: -webkit-repeating-linear-gradient(135deg, #ff6c6c 0, #ff6c6c 20%, transparent 0, transparent 25%, #3283fa 0, #3283fa 45%, transparent 0, transparent 50%);
    background: repeating-linear-gradient(-45deg, #ff6c6c 0, #ff6c6c 20%, transparent 0, transparent 25%, #3283fa 0, #3283fa 45%, transparent 0, transparent 50%);
    background-size: 80px;
}


.list-h {
    line-height: 30px;
    padding: 0 10px;
}

