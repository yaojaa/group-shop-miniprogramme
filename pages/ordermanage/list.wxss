._number {
    position: relative;
    display: inline-block;
    width: 50rpx;
    padding: 10rpx 0;
    background: #ccc;
    text-align: center;
    border-top-left-radius: 3rpx;
    color: #fff
}

._number:before {
    height: 0;
    width: 0;
    border-bottom: 6rpx solid #bbb;
    border-right: 6rpx solid transparent;
    right: -6rpx;
    top: 0;
}

._number:before,
._number:after {
    content: "";
    position: absolute;
}

._number:after {
    height: 0;
    width: 0;
    border-left: 25rpx solid #ccc;
    border-right: 25rpx solid #ccc;
    border-bottom: 7rpx solid transparent;
    bottom: -5rpx;
    left: 0;
}

