._number {
  display: inline-block;
  width: 50rpx;
  padding: 10rpx 0;
  background: #ccc;
  top: -6rpx;
  left: 10rpx;
  position: absolute;
  text-align: center;
  border-top-left-radius: 3rpx;
  color: #fff
}
._number:before {
   height: 0;
   width: 0;
   border-bottom: 6rpx solid #8D5A20;
   border-right: 6rpx solid transparent;
   right: -6rpx;
   top: 0;
}
._number:before, ._number:after {
    content: "";
    position: absolute;
}
._number:after {
    height: 0;
    width: 0;
    border-left: 30rpx solid #F47530;
    border-right: 30rpx solid #F47530;
    border-bottom: 7rpx solid transparent;
    bottom: -5rpx;
    left: 0;
}

button.button-hover{
    color: #fff
}
