.container{
  background: #f8f8f8;
  padding-bottom: 60px;
  min-height: calc(100vh - 60px);
}
.product-item {
  background: #fff;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-flex;
  display: flex;
  -webkit-box-direction: normal;
  -webkit-box-orient: horizontal;
  -webkit-flex-direction: row;
  -moz-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -moz-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-flex: 1;
  -webkit-flex: 1 1 0;
  -moz-flex: 1 1 0;
  flex: 1 1 0;
  position: relative;
  box-sizing: border-box;
}

.product-item .item-img {
  width: 140rpx;
  height: 140rpx;
  position: relative;
  margin-right: 20rpx;
}

.product-item .item-img image {
  width: 100%;
  height: 100%;
}

.product-item .item-body {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  position: relative;
  margin-right: 20rpx;
}

.product-item .item-body .item-title {
  font-size: 15px;
  color: #474245;
  width: 100%;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;

}
.product-item .item-body .item-type {
  font-size: 13px;
  color:#666;
  margin-top: 5rpx;
}
.product-item .item-side{
  text-align: right;
}
.product-item .item-side .price{
  font-size: 15px;
  display: block;
}
.product-item .item-side .number{
  font-size: 13px;
  display: block;
  color:#999
}
.footer-pay{
  position: fixed;
  bottom:0;
  left:0;
  right:0;
  line-height: 90rpx;
  background: #fff;
  color:#fff;
  text-align: center;
  font-weight: 400;
  font-size: 32rpx;
  display: flex;
  border-top:1rpx solid #f1f1f1;
}
.footer-pay .total{
  flex: 2;
  text-align: left;
  color:#333;
  padding: 0 15px;
}
.footer-pay .buy-btn{
    border-radius: 0;
    color: #fff;

  flex: 1;
  background: #49b34d;
}

.footer-pay .buy-btn:disabled{
      border-radius: 0;

}

.address{

}

.address button{
  position: absolute;
  right: 10px;
  top: 56px;
  z-index:999
}
.order-panel{
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  padding: 15px;
  align-items: center;
  background-color: #fff;
}
.goods-cover{
  width: 100rpx;
  height:100rpx;
  margin-right: 10px;
}
.order-panel .name{
  font-size: 16px;
  color:#333;
}
.seller-info{
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  align-items: center;
  padding: 5px 15px;
}
.seller-info .cover{
  width: 40rpx;
  height:40rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10px;
}
.seller-info .name{
  font-size: 14px;
  color:#333;
}