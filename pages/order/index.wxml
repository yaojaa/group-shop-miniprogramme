<view class="container">
        <i-message id="message" />

    <!--自提-->

     <i-panel wx:if="{{give_type==2}}">
        <i-input value="{{ nickName }}" title="收货人" autofocus placeholder="名字" />
        <i-input value="{{ mobile }}" type="number" title="联系电话" placeholder="输入手机号方便联系" />
    </i-panel>



   <!--送货上门-->

<i-panel wx:if="{{give_type==1}}" title="确认订单">



  <view class="address">
   <input bindinput="mobileChange" value="{{ mobile }}"  placeholder="请输入手机号" /> 

   <button open-type="getPhoneNumber" size="mini" bindgetphonenumber="getPhoneNumber">使用微信绑定的手机号</button> 
  </view>

      <view class="i-cell i-input">
            
         <input value="{{address}}" type="textarea" title="收货地址" placeholder="请输收货地址(最多50字)" maxlength="50" />
          <input value="" type="textarea" title="收货地址" placeholder="楼号、门牌号" maxlength="50" />
      </view>

    </i-panel>






