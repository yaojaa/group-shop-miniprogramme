            <navigator class="min-btn-s" url="../orderDefault/orderDefault">管理订单</navigator>
        </view>
    </view>
    <view class="page-section page-section-spacing swiper">
        <swiper indicator-dots="{{true}}" autoplay="{{true}}" class="swiper-primary">
            <block wx:for="{{imgUrls}}" wx:key="{{index}}">
                <swiper-item>
                    <image src="{{item}}" class="slide-image" />
                </swiper-item>
            </block>
        </swiper>
    </view>
    <view class='goods-info'>
        <view class="goods-title">
            <text>{{goods.goods_name}}</text>
        </view>
        <view class="goods-desc">
            <text>没成一个爱心暖，平台自费购买一份了</text>
        </view>
        <view class="goods-price text-justify">
            <view>
                <text class="price">¥19.8</text>
                <text class='line-through'>¥29.8</text>
            </view>
            <view>
                <text>已售：200件</text>
            </view>
        </view>
    </view>
