<view class="container">
  <view class='painter'>
    <image src="{{imagePath}}"></image>
  </view>
    <view class="goods-sticky">
         <image class="user-avatar" src="{{seller_user.head_pic}}"></image>
        <view class="user-info">
           
            <view class="name">
                <view class="f14">{{seller_user.nickname}} </view>
                <!-- <view class="f12 text-muted">有3人看过</view> -->
            </view>
            <!-- <i-icon type="mobilephone" />
            <i-icon type="interactive" /> -->
        </view>
        <view class="share-box">
            <button open-type="share">
              <image src="/img/share.png" class="wx-icon" />
            </button>
            <!--             <image src="/img/circle.png" class="wx-icon" />
 -->
        </view>
    </view>
    <view class="page-section page-section-spacing swiper goods-manage">
            <!--   <view class="manage">
            <navigator class="min-btn-s" url="../publish/publish?id=6">修改活动</navigator>
            <navigator class="min-btn-s" url="../orderDefault/orderDefault">管理订单</navigator>
        </view> -->
            <swiper indicator-dots="{{true}}" autoplay="{{true}}" class="swiper-primary">
                <block wx:for="{{imgUrls}}" wx:key="{{index}}">
                    <swiper-item>
                        <image src="{{item}}?imageView2/1/w/750/h/400/q/95" class="slide-image" />
                    </swiper-item>
                </block>
            </swiper>
        </view>
    <view class="page-wrap">
        <view class="countdownTime">
            <block wx:if="{{countdownTime && goods._expires ==1 }}">
                <view class="time-block-box">
                    <i-count-down target="{{countdownTime}}" clear-timer="{{clearTimer}}" format="{{myFormat}}" i-class="time-block" show-day="{{true}}">
                    </i-count-down>
                </view>
            </block>

            <block wx:else>
                {{['','开团中','尚未开始请稍后...','已截团,下次请早点来哦'][goods._expires]}}
            </block>
            
        </view>
        <view class='goods-info'>
            <view class="goods-title">
                <text>{{goods.goods_name}}</text>

            </view>
            <view class="goods-price">
                <view wx:for="{{spec_goods_price}}" wx:key="{{item.item_id}}" class="goods-price-item text-justify scale-1px">
                    <text class="price">¥{{item.price}}</text>
                    <text>{{item.key_name}}</text>
                    <!-- <text class='line-through'>¥29.8</text> -->
                </view>
            </view>
        </view>
        <view class="scale-1px" style="padding: 0 5px">
            <i-cell wx:for="{{sell_address}}" wx:key="index" title="{{item.name+' '+item.door_number}}" i-class="address-item">
                <i-icon type="coordinates_fill" slot="icon" />
            </i-cell>
        </view>
        <view class='sub-title scale-b-1px'>
            <text>介绍描述：</text>
        </view>
        <view class='goods-content'>
           <text>{{goods.goods_content}}</text> 
        </view>
        <view class='sub-title scale-b-1px'>
            最近参与 ({{orderCount}})
        </view>

        <i-cell-group wx:if="{{orderUsers.length ==0}}">
            <i-cell  i-class="buyer-item-box">
                一大波人正在赶来...
            </i-cell>
        </i-cell-group>

        <i-cell-group>
            <i-cell wx:for="{{ orderUsers }}" i-class="buyer-item-box">
                <view class="buyer-item">




                    <image class="buyer-avatar" src="{{item.user.head_pic}}"></image>

                    <view class="buyer-info">
                          
                        <view class="name"> <text class="number">{{item._number}} </text>{{item.user.nickname}}   </view>
                        <view class="type">
                            <view wx:for="{{item.specs}}" wx:key="index" wx:for-item="gds">
                                {{gds.spec_key_name}} ✕ {{gds.goods_num}}
                            </view>
                        </view>
                    </view>
                    <view class="buyer-date">{{item.order.add_time}}</view>
                </view>
            </i-cell>
        </i-cell-group>
    </view>

 <view class="piclist">
        <view class="pic" wx:for="{{goods.content_imgs}}" wx:for-item="img" >
                  <image bindtap="imgPreview" data-list="{{goods.content_imgs}}" src="{{img}}" mode="widthFix" />
         </view>
</view>
   
    <view class='footer-cart'>
        <view class='icon' bindtap='homepage'>
            <i-icon type="homepage" size="26" color="#333" />
            <text class="label">我的</text>
        </view>

   <form style="flex:2"  bindsubmit="formSubmit" data-fn="cartPanelShow" report-submit="true">
    <button class="buy" formType="submit">立即订购</button>
   </form> 

    </view>
    <i-action-sheet visible="{{ cartPanel }}" show-cancel bind:cancel="cartPanelHide" show-cancel="{{ false }}">
        <view slot="header" class="cart-panel">
            <view class="cart-panel-hd">
                  <image src="{{imgUrls[0]}}" class="goods-thumbnail" />
                请选择规格数量
            </view>
            <i-panel>
            <i-cell-group>
                <i-cell wx:for="{{spec_goods_price}}">
                    <view class="type-box text-justify">
                        <view><text class="text-red f16"> ¥{{item.price}}</text> / {{item.key_name}}</view>
                        <i-input-number id="{{index}}" value="{{item.item_num}}" min="0" max="100" bindchange="handleCountChange" slot="footer" />
                    </view>
                </i-cell>
            </i-cell-group>
        </i-panel>
            <view class="cart-footer">
                <view class="total">
                    <text class="f12 text-default">合计：</text>
                    <text class=" text-red f20">¥{{amountMoney}}</text>
                    <!-- <text class="f12 text-muted ml-sm">数量 x 1</text> -->
                </view>
                <view wx:if="{{!hasScope}}" style="flex:2" >
                    <button class="settlement" open-type="getUserInfo" bindgetuserinfo="getUserInfoEvt">下一步</button>
                </view> 


          <form style="flex:2"  wx:else bindsubmit="formSubmit" data-fn="buy" report-submit="true">
                    <button class="settlement" shape="circle" formType="submit" d>下一步</button>
         </form> 

            </view>
        </view>
    </i-action-sheet>
    <i-message id="message" />
    <!-- <canvas canvas-id="canvas-1"></canvas> -->
</view>