<view class="container">
    <imgs imgs="{{imgs}}"></imgs>

            <view class="countdownTime">
            <block wx:if="{{countdownTime && goods._expires ==1 }}">
                <view class="time-block-box">
                    <i-count-down target="{{countdownTime}}" clear-timer="{{clearTimer}}" format="{{myFormat}}" i-class="time-block" show-day="{{true}}">
                    </i-count-down>
                </view>
            </block>
            <block wx:else>
                已截团,下次请早点来哦 {{['','开团中','尚未开始请稍后...','已截团,下次请早点来哦'][goods._expires]}}
            </block>
            <view class="right-text"><view class="share-box">
            <button bindtap='openShareFriends'>
                <i-icon type="share" size="28" color="#666" /> <text class="text-muted f12">分享</text>
            </button>
        </view></view>
        </view>


    <!-- <view class="pageloading">
    加载中...
</view> -->
    <!--     <official-account></official-account>
 -->
    <view class='painter'>
        <image src="{{imagePath}}"></image>
    </view>
<!--     <button wx:if="{{copy}}" bindtap="copy">复制商品</button>
 -->    
   <view class="goods-title">
                <text>{{goods.goods_name}}</text>
   </view>
 <view class="goods-sticky">
        <view class="user-info">
            <view class="name">
               
                <view class="f12 text-muted">
                    <text wx:if="{{seller_user.wxnumber.length > 0 }}"></text>
                                  <text>{{goods.goods_name}}</text>
  快递邮寄 自取：金域东郡1-1-103
  
                </view>
            </view>
            <!-- <i-icon type="mobilephone" />
            <i-icon type="interactive" /> -->
        </view>
        
    </view>

    <view class="page-wrap">

        <view class='goods-info'>
         
            <view class="goods-price" >

                <view class="goods-price-item flex-box">
                    <view class="pics flex-item">
 <image  src="https://www.daohangwa.com/public/upload/local_cover/tmp_8789e959d03e6124356439808cc0354c81fd598848c33517.jpg" />                     </view>

                     <view class="flex-item-5">

                    <view class="f14 text-default">一盒 <text class="price"> ¥99.00</text></view> 
                    <view class="f12px text-info">描述简介</view> 
                </view>
                 <i-input-number i-class="input-number" id="1" value="0" min="0" max="100"  bindchange="handleCountChange" slot="footer" />
                </view>

                <view class="goods-price-item">
                    <view class="f14 text-default">相思玫瑰 <text class="price"> ¥99.00</text></view> 
                    <view class="f12px text-info">描述简介</view> 
                 <i-input-number i-class="input-number" id="1" value="0" min="0" max="100"  slot="footer" />
                </view>

                <view wx:for="{{spec}}" wx:key="{{item.item_id}}" class="goods-price-item scale-1px">
                    <text>{{item.key_name}}</text> / <text class="price">¥{{item.price}}99.00</text>
                    <!-- <text class='line-through'>¥29.8</text> -->
                </view>
            </view>
              
        </view>
        <view style="padding:0 10px;" wx:if="{{goods.delivery_method == 1}}">
            <i-cell title="发货方式" label="快递邮寄 送货上门" i-class="address-item">
                <i-icon type="coordinates_fill" slot="icon" />
            </i-cell>
        </view>
        <view wx:if="{{goods.delivery_method == 2}}" style="padding:0 10px;" bindtap="openMap" wx:for="{{sell_address}}" wx:key="{{index}}" data-good-id="{{goods.goods_id}}">
            <i-cell title="{{'取货地点 '+item.name+' '+item.door_number}}" label="{{item.address}}" i-class="address-item" is-link>
                <i-icon type="coordinates_fill" slot="icon" />
            </i-cell>
        </view>
 
        <view class='goods-content-wraper'>
            <view class="googs-title flex-box">

                <view class="flex-item" style="width: 200rpx">
                    <image class="userinfo-avatar" src="https://www.daohangwa.com/public/upload/local_cover/tmp_8789e959d03e6124356439808cc0354c81fd598848c33517.jpg" />   

                    <text class="text-muted">{{seller_user.nickname}}   红叶舞秋山 </text>

                    
                </view>
           </view>
            <view class='goods-content'>
                <text>{{goods.goods_content}}</text>
            </view>
        </view>

          <view style="padding: 20rpx 0"><button bindtap='copyDetail' size="mini">生成文字接龙</button></view>


        <view class='sub-title scale-b-1px'>
            <i-icon type="suspend" color="#4dc332" />最近参与
        </view>
        <i-cell-group wx:if="{{orderUsers.length ==0}}">
            <i-cell i-class="buyer-item-box">
                <button size="mini" open-type="share">
                    一大波人正在赶来...去喊人
                </button>
            </i-cell>
        </i-cell-group>
        <i-cell-group>
            <i-cell wx:for="{{ orderUsers }}" wx:key="{{index}}" i-class="buyer-item-box">
                <view class="buyer-item">
                    <image class="buyer-avatar" src="{{item.user.head_pic}}"></image>
                    <view class="buyer-info">
                        <view class="name"> {{item.user.nickname}} <text class="number">{{item.create_number}} </text>
</view>
                        <view class="type">
                            <view wx:for="{{item.specs}}" wx:key="index" wx:for-item="gds">
                                 跟 {{gds.spec_key_name}} × {{gds.goods_num}}
                            </view>
                        </view>
                    </view>
                    <view class="buyer-date">{{item.add_time}}</view>
                </view>
            </i-cell>
        </i-cell-group>
        <view wx:if="{{goods.content_imgs.length}}">
            <view class='sub-title scale-b-1px'>
                <i-icon type="suspend" color="#4dc332" />图文介绍
            </view>
        </view>
    </view>

    <view class='sub-title scale-b-1px'>
    <i-icon type="suspend" color="#4dc332" />朋友评价
    </view>

    <comment></comment>

    <view class="piclist-container">
        <block class="pic" wx:for="{{goods.content_imgs}}" wx:key="{{index}}" wx:for-item="img">
            <image bindtap="imgPreview" data-list="{{goods.content_imgs}}" src="{{img}}" mode="widthFix" />
        </block>
    </view>
    <view class='footer-cart'>
        <view class='icon' bindtap='homepage'>
            <i-icon type="homepage" size="26" color="#333" />
            <text class="label">我的</text>
        </view>
        <form style="flex:2" bindsubmit="formSubmit" data-fn="cartPanelShow" report-submit="true">
            <button class="buy" formType="submit">立即参团</button>
        </form>
    </view>
    <i-action-sheet visible="{{ cartPanel }}" show-cancel bind:cancel="cartPanelHide" show-cancel="{{ false }}">
        <view slot="header" class="cart-panel">
            <view class="cart-panel-hd">
                <image src="{{imgUrls[0]}}" class="goods-thumbnail" />
                请选择规格数量
            </view>
            <scroll-view scroll-y style="max-height:500px;">
                <i-panel>
                    <i-cell-group style="max-height:500rpx;overflow: scroll;">
                        <i-cell wx:for="{{spec_goods_price}}" wx:key="{{index}}">
                            <view class="type-box text-justify">
                                <view><text class="text-red f16"> ¥{{item.price}}</text> / {{item.key_name}}</view>
                                <i-input-number id="{{index}}" value="{{item.item_num}}" min="0" max="100" bindchange="handleCountChange" slot="footer" />
                            </view>
                        </i-cell>
                    </i-cell-group>
                </i-panel>
            </scroll-view>
            <view class="cart-footer">
                <view class="total">
                    <text class="f12 text-default">合计：</text>
                    <text class=" text-red f20">¥{{amountMoney}}</text>
                    <!-- <text class="f12 text-muted ml-sm">数量 x 1</text> -->
                </view>
                <view wx:if="{{!hasScope}}" style="flex:2">
                    <button class="settlement" open-type="getUserInfo" bindgetuserinfo="getUserInfoEvt">下一步</button>
                </view>
                <form style="flex:2" wx:else bindsubmit="formSubmit" data-fn="buy" report-submit="true">
                    <button class="settlement" shape="circle" formType="submit">下一步</button>
                </form>
            </view>
        </view>
    </i-action-sheet>
    <i-modal visible="{{ msgvisible }}" show-ok="{{false}}" show-cancel="{{false}}">
        <view class='modal-bd text-center '>
            您的位置不在取货范围内
        </view>
        <view class='modal-bd text-center '>
            请确认能取货再下单哦
        </view>
        <view class="modal-fd">
            <form data-fn="ok_i_know" bindsubmit="formSubmit" report-submit="true">
                <button class="btn btn-success" formType="submit"> 我知道了</button>
            </form>
        </view>
    </i-modal>
    <view class='share-mark' hidden="{{!showShareFriendsCard}}" bindtap='closeShareFriends'></view>
    <view class='share-friends' hidden="{{!showShareFriendsCard}}">
        <view class='share-friends-img' bindtap='closeShareFriends'>
            <i-spin wx:if="{{!shareFriendsImg}}" i-class='share-friends-loading' fix size="large"></i-spin>
            <view wx:if="{{!shareFriendsImg}}" class='share-friends-loading-txt'><text>努力生成中,请稍等...</text></view>
            <image wx:if="{{shareFriendsImg}}" class='icon-img' src='{{shareFriendsImg}}' mode='aspectFit'></image>
        </view>
        <view class='share-bottom-btn'>
            <button open-type="share" class="share-f-btn" type="success" bindtap='closeShareFriends'>
                <image class='icon-img' src='../../img/wx.png' mode='aspectFit'></image>
                <text>分享给好友</text>
            </button>
            <button class="share-f-btn btn-download" bindtap='savaSelfImages'>
                <image class='icon-img' src='../../img/xz.png' mode='aspectFit'></image>
                <text>保存到相册</text>
            </button>
        </view>
    </view>
    <view class='share-painter'>
        <view wx:for="{{shareCardConfig.content.des}}" wx:key="{{index}}" class='des-content' style='width:{{shareCardConfig.width - shareCardConfig.content.margin*2}}rpx; line-height:{{index == 0 ? shareCardConfig.content.title.lineHeight : shareCardConfig.content.lineHeight}}rpx; font-size: {{index == 0 ? shareCardConfig.content.title.fontSize : shareCardConfig.content.fontSize}}rpx; font-weight: {{index == 0 ? 700 : 400}};'>{{item.txt}}</view>
        <share-painter palette="{{template}}" bind:imgOK="onFriendsImgOK" />
    </view>
    <i-message id="message" />
</view>