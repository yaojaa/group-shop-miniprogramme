<custom-bar fixed="true" scrollTop="{{scrollTop}}" changeStartHeight="500" bottomLayerBackColor="#ffffff" changeEndHeight="600" showBackBar="true">
    <view slot="bottom">
        <view class="flex align-center pl-df cus-head" style="padding-right: 220rpx">
            <image class="avatar mr-sm" src="{{goods.user.headimg}}" />
            <view class="flex-sub">
                <view class="text-hide">{{goods.goods_name}}</view>
            </view>
        </view>
    </view>
</custom-bar>
<view class="container">
    <view class="roll_box" style="transform: translate({{bus_x}}px, {{bus_y}}px);opacity: {{showRoll || 0}}">
    </view>
    <imgs imgs="{{imgs}}">
        <view class="user-info" wx:if="{{scrollTop < 340}}" style="padding-top:{{StatusBar}}px;height:{{CustomBar}}px;{{bgImage?'background-image:url(' + bgImage+')':''}}">
            <view class="user-body" catchtap="goHomePage">
                <view class="user-info-hd">
                    <image src="{{goods.user.headimg}}" class="avatar">
                    </image>
                </view>
                <view class="user-info-bd">
                    <text class="name">{{goods.user.nickname}}</text>
                    <text class="info ml-xs">粉丝{{goods.buyuser_count}}人 </text>
                    <!--   <wux-icon type="ios-call" color="#fff" size="18" wux-class="icon" />
                <wux-icon type="ios-chatbubbles" color="#fff" size="18" wux-class="icon" /> -->
                </view>
            </view>
        </view>
    </imgs>
    <view class="sale-panel">
        <view class="sale-panel-bd">
            <view class="price-group">
                {{goods.goods_name}}
                <text class="symbol">￥</text>
                <text class="price"> {{goods.price_min}}</text>
                <text class="text-sm n-bold"> /起</text>
            </view>
          
        </view>
        <view class="sale-panel-fd {{goods._expires !==1?'off':''}}">
            <view class="marker"></view>
            <view wx:if="{{countdownTime && goods._expires ==1 }}">
                <view class="tit">距离结束</view>
                <view class="count-down">
                    <text class="time-area">{{days}}</text><text class="space">:</text>
                    <text class="time-area">{{hours}}</text><text class="space">:</text>
                    <text class="time-area">{{min}}</text><text class="space">:</text>
                    <text class="time-area">{{sec}}</text>
                </view>
            </view>
            <view wx:else>
                {{['','开团中','尚未开始','已截团'][goods._expires]}}
            </view>
        </view>
    </view>
    <view class="goods-info por white-bg p-df cf">
        <view class="goods-info-bd">
       <!--      <view class="goods-name">
                {{goods.goods_name}}
            </view> -->

              <view class="text-sm">访问人数 {{goods.pageview_count
                }} 已售 {{goods.total_qty}} <text wx:if="{{goods.delivery_method == 1}}">（快递邮寄）</text></view>
            <!--             <view class="f12px text-info">访问人数 {{goods.pageview_count
                }} 已售 {{goods.total_qty}} <text wx:if="{{goods.delivery_method == 1}}">（快递邮寄）</text></view> -->
        </view>
        <view class="goods-share">
            <button bindtap='openShareFriends' class="btn-reset">
                <i-icon type="send" size="24" color="#666" />
                <view class="text-muted text-xs">分享</view>
            </button>
        </view>
        <view class="load-area" wx:if="{{!goods}}">
            <wux-spin wux-class="spin" />
        </view>
    </view>
    <view class='painter'>
        <image src="{{imagePath}}"></image>
    </view>
    <!--     <button wx:if="{{copy}}" bindtap="copy">复制商品</button> -->
    <view class="page-wrap">
        <view id="spec_box" class="goods-price flash {{notice?'notice':''}} white-bg ph-df cf">
            <block wx:for="{{goods_spec}}" wx:key="{{item.item_id}}">
                <view class="solid-top"></view>
                <view class="goods-price-item flex-box">
                    <view class="pics" wx:if="{{item.spec_pic}}">
                        <image bindtap="showGallerySpec" data-urls="{{item.spec_pic}}" data-current="{{ index }}" data-list="{{item.spec_pic}}" src="{{item.spec_pic[0]}}?imageView2/2/w/180/h/180/format/jpg/q/85"></image>
                        <view class="smallnum" wx:if="{{item.spec_pic.length>1}}">{{item.spec_pic.length}}张</view>
                    </view>
                    <view class="info">
                        <view class="f14 text-default">{{item.spec_name}} <text class="price f12px"> ¥{{item.spec_price}}</text></view>
                        <view wx:if="{{item.spec_desc}}" class="f14px text-muted" style="margin-top: 10rpx;">{{item.spec_desc}}</view>
                    </view>
                    <view class="buy" catchtap="addAnimate">
                        <i-input-number i-class="input-number" id="{{index}}" value="{{item.item_num}}" min="0" max="{{1000}}" bindchange="handleCountChange"></i-input-number>
                    </view>
                </view>
            </block>
        </view>
        <view wx:if="{{goods.delivery_method == 2}}" data-lat="{{item.latitude}}" data-lng="{{item.longitude}}" wx:for="{{goods.self_address}}" wx:key="{{index}}" class="white-bg ph-sm mt-sm">
            <i-cell-group>
                <i-cell title="{{'取货地点 '+item.name+' '+item.door_number}}" label="{{item.address}}" i-class="address-item">
                    <i-icon type="coordinates_fill" size="28" color="#999999" slot="icon" />
                </i-cell>
            </i-cell-group>
        </view>
        <view class='goods-content-wraper por'>
            <view class='goods-content'>
                <text>{{goods.goods_content}}</text>
            </view>
            <view class="load-area" wx:if="{{!goods}}">
                <wux-spin wux-class="spin" />
            </view>
            <view class="solid-top"></view>
            <view style="padding: 20rpx 0">
                <view class="flex text-center ">
                    <view class="flex-sub"><button class="btn  white " bindtap='copyGoods'><text class="primary-text">复制</text></button></view>
                    <div class="solid-right"></div>
                    <view class="flex-sub"><button class="btn  white " bindtap='copyDetail'><text class="primary-text">生成文字接龙</text></button></view>
                    <!--   <share-button product="{{hw_data}}" bind:error="on_error" type="1" wx:if="{{hw_data}}" /> -->
                </view>
            </view>
        </view>
        <view class='sub-title scale-b-1px contentBox'>
            最近参与
        </view>
        <view class="white-bg p-df cf">
            <view class="mt-sm" wx:if="{{orderUsers.length ==0}}">
                <button size="mini" class="btn-round" open-type="share">
                    暂时还没有人参与哦 点击这里分享转发
                </button>
            </view>
            <scroll-view scroll-y style="max-height: 750rpx" lower-threshold="300" bindscrolltolower="buyUserScroll">
                <i-cell-group>
                    <block wx:for="{{ _orderUsers_ }}" wx:for-item="listItem" wx:key="{{listItem}}">
                        <i-cell wx:for="{{listItem}}" wx:key="{{item}}" i-class="buyer-item-box">
                            <view class="buyer-item">
                                <text class="number">{{item.create_number}} </text>
                                <image class="buyer-avatar" src="{{item.headimg}}"></image>
                                <view class="buyer-info">
                                    <view class="name"> {{item.nickname}}
                                    </view>
                                    <view class="type">
                                        <view wx:for="{{item.spec}}" wx:key="index" wx:for-item="gds">
                                            跟 {{gds.spec_name}} + {{gds.qty}}
                                        </view>
                                    </view>
                                </view>
                                <view class="buyer-date">{{item.timeago}}</view>
                            </view>
                        </i-cell>
                    </block>
                </i-cell-group>
            </scroll-view>
        </view>
        <view wx:if="{{goods.content_imgs.length}}">
            <view class='sub-title scale-b-1px'>
                图文介绍
            </view>
        </view>
    </view>
    <view class="piclist-container" wx:if="{{toShowPic}}">
        <view wx:if="{{goods.goods_video}}">
            <video id="myVideo" src="{{goods.goods_video}}" poster="{{goods.goods_video_cover}}" controls></video>
        </view>
        <block class="pic" wx:for="{{goods.content_imgs}}" wx:key="{{index}}" wx:for-item="img">
            <image bindtap="showGallery" data-current="{{ index }}" data-list="{{goods.content_imgs}}" data-src="{{img}}" src="{{img}}?imageMogr2/thumbnail/750x" mode="widthFix" />
        </block>
    </view>
    <view class='footer-cart'>
        <view class='icon' bindtap='homepage'>
            <i-icon type="mine" size="26" color="#333" />
            <text class="label">我的</text>
        </view>
        <form style="flex:3;position: relative;" bindsubmit="formSubmit" data-fn="cartPanelShow" report-submit="true">
            <text wx:if="{{totalNum>0}}" class="default-badge {{showRoll==0?'cake':''}}">{{totalNum}}</text>
            <button wx:if="{{goods._expires==1}}" class="buy linenear_bg" formType="submit">立即参与</button>
            <button wx:else class="buy linenear_bg" formType="submit">不能参与了哦</button>
        </form>
    </view>
    <i-action-sheet wx:if="{{amountMoney!==0}}" visible="{{ cartPanel }}" show-cancel bind:cancel="cartPanelHide" show-cancel="{{ false }}">
        <view slot="header" class="cart-panel">
            <view class="title f14 pt-sm pl-df" style="margin-bottom: -5px">确定数量</view>
            <scroll-view scroll-y style="max-height:500px;">
                <i-panel>
                    <i-cell-group style="max-height:500rpx;overflow: scroll;">
                        <i-cell wx:if="{{item.item_num>0}}" wx:for="{{goods_spec}}" wx:key="{{index}}">
                            <view class="type-box text-justify">
                                <view>{{item.spec_name}} / <text class="text-red f16"> ¥{{item.spec_price}}</text> </view>
                                <i-input-number disabled id="{{index}}" value="{{item.item_num}}" min="0" max="100" bindchange="handleCountChange" slot="footer" />
                            </view>
                        </i-cell>
                    </i-cell-group>
                </i-panel>
            </scroll-view>
            <view class="cart-footer">
                <view class="total">
                    <text class="f12 text-default">合计：</text>
                    <text class=" text-red f20">¥{{amountMoney}}</text>
                    <!-- <text class="f12 text-muted ml-sm">数量 x 1</text> -->
                </view>
                <view wx:if="{{!hasScope}}" style="flex:2">
                    <button class="settlement linenear_bg" open-type="getUserInfo" bindgetuserinfo="getUserInfoEvt">下一步</button>
                </view>
                <form style="flex:2" wx:else bindsubmit="formSubmit" data-fn="buy" report-submit="true">
                    <button class="settlement linenear_bg" shape="circle" formType="submit">下一步</button>
                </form>
            </view>
        </view>
    </i-action-sheet>
    <i-modal visible="{{ msgvisible }}" show-ok="{{false}}" show-cancel="{{false}}">
        <view class='modal-bd text-center '>
            您的位置不在取货范围内
        </view>
        <view class='modal-bd text-center '>
            请确认能取货再下单哦
        </view>
        <view class="modal-fd">
            <form data-fn="ok_i_know" bindsubmit="formSubmit" report-submit="true">
                <button class="btn btn-success" formType="submit"> 我知道了</button>
            </form>
        </view>
    </i-modal>
    <view class='share-painter'>
        <view wx:for="{{shareCardConfig.content.des}}" wx:key="{{index}}" class='des-content' style='width:{{shareCardConfig.width - shareCardConfig.content.margin*2}}rpx; line-height:{{index == 0 ? shareCardConfig.content.title.lineHeight : shareCardConfig.content.lineHeight}}rpx; font-size: {{index == 0 ? shareCardConfig.content.title.fontSize : shareCardConfig.content.fontSize}}rpx; font-weight: {{index == 0 ? 700 : 400}};'>{{item.txt}}</view>
        <share-painter palette="{{template}}" bind:imgOK="onFriendsImgOK" />
    </view>
    <!--     <i-message id="message" />
 -->
    <van-popup custom-class="authPopBox" show="{{ showAuth }}" bind:close="onClose">
        <view class="logo">
            <image class="avatar" src="{{goods.user.headimg}}" />
        </view>
        <view class="info">
            您好，请允许获取公开信息
        </view>
        <button size="default" type="primary" plain="false" open-type="getUserInfo" bindgetuserinfo="getUserInfoEvt">授 权</button>
    </van-popup>
    <van-action-sheet show="{{ showShareFriendsCard }}" title="分享到" bind:close="closeShareFriends">
        <view class="flex text-center p-xl ">
            <button class="flex-sub btn-reset" open-type="share">
                <image src="http://leileiimg.countinsight.com/front/img/wx_icon.png" class="img-lg"></image>
                <view class="text-weak mt-sm text-df">微信好友</view>
            </button>
            <view bindtap='handlePoster' class="flex-sub share-pyq">
                <image src="http://leileiimg.countinsight.com/front/img/quan_icon.png" class="img-lg"></image>
                <view class="text-weak mt-sm">生成海报</view>
            </view>
        </view>
    </van-action-sheet>
    <!-- <view show="{{ poster }}" bind:close="handlePoster" custom-style="background:none;"> -->
    <view hidden="{{ !poster }}" class="share-friends-box">
        <view class='share-friends-img' bindtap='handlePoster'>
            <view class="share-img-box" wx:if="{{!shareFriendsImg}}">
                <i-spin i-class='share-friends-loading' fix size="large"></i-spin>
                <view class='share-friends-loading-txt'><text>努力生成中,请稍等...</text></view>
            </view>
            <view class="text-center share-img-box" wx:else>
                <image class='icon-img' src='{{shareFriendsImg}}' mode='aspectFit'></image>
                <button class="btn primary linenear_bg round lg" catchtap="savaSelfImages"> 保存海报 </button>
            </view>
        </view>
    </view>
    <wux-gallery id="wux-gallery" />
</view>