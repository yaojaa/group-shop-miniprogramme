@import "../../utils/weui.wxss";

.swiper-primary {
    width: 100%;
    height: 400rpx;
}

.swiper-primary image {
    width: 100%
}

.goods-title {
    font-size: 36rpx;
    color: #333;
    line-height: 1.4;
}

.goods-desc {
    font-size: 30rpx;
    line-height: 1.4;
    color: #666;
    margin-top: 5rpx;
}

.goods-price {
    font-size: 26rpx;
    color: #333;
    padding: 5rpx 0 0;
}

.goods-price .price {
    font-size: 36rpx;
    color: #FF5757;
    padding-right: 10rpx;
}

.goods-addres {
    font-size: 26rpx;
}

.goods-phone {
    font-size: 26rpx;
}

.goods-info {
    padding-top: 10px;
    background: #fff;
}

.wx-group-pic {
    width: 46rpx;
    height: 46rpx;
    vertical-align: middle;
    padding-right: 20rpx;
}

.sub-title {
    margin-top: 20rpx;
    font-size: 32rpx;
    padding: 5px 0;
/*    border-bottom: 1rpx solid #f1f1f1;*/
}

.goods-content {
    padding: 10px 0;
    font-size: 28rpx;
    background: #fff;
}

.footer-cart {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 48px;
    background: #fff;
    color: #fff;
    text-align: center;
    font-weight: 400;
    font-size: 32rpx;
    display: flex;
    border-top: 1rpx solid #f1f1f1;
}

.footer-cart .icon {
    flex: 1;
    padding-top: 1px;
}

.footer-cart .label {
    display: block;
    font-size: 20rpx;
    color: #666;
}

.footer-cart .buy {
    background: #49b34d;
    flex: 2;
    line-height: 48px;
}

.goods-content image {
    width: 100%;
}

page {
    /*  position: relative;
    perspective: 200;
    -webkit-perspective: 200;*/
}



.goods-sticky {
    background-color: #fff;
    padding: 6px 15px;
     display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    align-items: center;
}

.min-btn-s {
    display: inline-block;
    font-size: 12px;
    padding: 3px 10px;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 3px;
    color: #fff;
}

.min-btn-s+.min-btn-s {
    margin-left: 10px;
}

.code-pic {
    width: 300rpx;
    height: 300rpx;
}

.user-info {
   -webkit-flex: 1;
   -moz-flex: 1;
   -ms-flex: 1;
   -o-flex: 1;
   flex: 1;
}

.user-info .name {
    display: inline-block;
    padding-left: 10px;
    line-height: 1.4;
}

.user-info .name text {
    line-height: 0.9;
    display: inline-block;
}

.user-avatar {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    overflow-y: hidden;
    display: inline-block;
    vertical-align: top;
}

.user-info .name text {
    display: block;
}

.cart-panel {
    text-align: left;
}

.goods-thumbnail {
    border: 2px solid #fff;
    width: 120rpx;
    height: 120rpx;
    border-radius: 3px;
    margin-top: -40rpx;
    margin-left: 10px;
}

.type-box {
}

.cart-footer {
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    height: 48px;
    line-height: 48px;
    background: #fff;
    color: #fff;
    text-align: center;
    font-weight: 400;
    font-size: 32rpx;
}

.cart-footer .total {
    -webkit-flex: 3;
    -moz-flex: 3;
    -ms-flex: 3;
    -o-flex: 3;
    flex: 3;
    text-align: left;
    padding-left: 15px;
}

.cart-footer .settlement {
    -webkit-flex: 1;
    -moz-flex: 1;
    -ms-flex: 1;
    -o-flex: 1;
    flex: 1;
    background: #49b34d;
}

.cart-panel-hd {
    background-color: #f2f2f2;
    padding: 7px 15px;
    font-size: 14px;
    color:#666;
}

.share-box {
    height: 56rpx;
    overflow: hidden;
}

.share-box .wx-icon {
    width: 56rpx;
    height: 56rpx;
    display: inline-block;
    margin-left: 10px;
    vertical-align: top;
}

.goods-manage {
    position: relative;
}

.goods-manage .manage {
    position: absolute;
    top: 10rpx;
    right: 20rpx;
    z-index: 9999;
}

.share-box button {
    border: none;
    padding: 0;
    margin: 0;
    background-color: transparent;
}

.share-box button::after {
    border: none;
}

.countdownTime {
    font-size: 14px;
    background-color: #ffeaea;
    color: #FF5757;
    margin:0 -15px;
    text-align: center;
    overflow: hidden;
    padding: 7px;
}
.time-block{
    
}


.container {
    background: #fff;
    padding-bottom: 60px;
    /*background-image: -webkit-linear-gradient(rgba(73,179,77,0.3) 40%, #f2f2f2)*/
}

.page-wrap {
    background: #fff;

    position: relative;
    padding: 0 15px;
}
.top-jiao{
    width: 30rpx;
    height: 14rpx;
    position: absolute;
    top:-12rpx;
    left:23rpx;
}
.buyer-item-box,.address-item{
    padding-left: 0 !important;
    padding-right: 0 !important;
}
.address-item .i-cell-desc{
    font-size: 14px !important;
}
.buyer-item{
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    align-items: center;
}
.buyer-avatar {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    overflow-y: hidden;
}
.buyer-info{
    -webkit-flex: 1;
    -moz-flex: 1;
    -ms-flex: 1;
    -o-flex: 1;
    flex: 1;
    line-height: 1.2;
    padding-left: 10px;
}
.buyer-date{
    white-space:nowrap;
    color:#999;
    font-size: 12px;
}
.buyer-info .name{
    font-size: 13px;
    color:#333;
}
.buyer-info .type{
    font-size: 12px;
    color:#666;
    line-height: 1.2;
    padding-top: 5px;
}
.buyer-info .type view{
    display: inline-block;
    padding-right: 10px;
}
.goods-price-item{
    margin:10px 0;
    padding: 5px 10px;
}
