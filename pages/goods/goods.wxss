.share-painter .des-content{
  position: fixed;
  left: -200%;
  top: 0;
  width: 690rpx;
  background-color: #fff;
  font-size: 34rpx;
  line-height: 56rpx;
  word-break: break-all;
  word-wrap: break-word;
}
.goods-content-wraper{
  border-radius: 10px;
  box-shadow: 0 0px 33px #eee;
  background: #fff;
  border:1px solid #f9f9f9;
  padding: 25rpx;
  margin-top: 100rpx
}


.goods-content:before{
    content: '“';
    color: #888;
    font-size: 22px;
    position: relative;
    left: 0px;
    bottom: 3px;
}
.goods-content:after{
    content: '”';
    color: #888;
    font-size: 22px;
    position: relative;
    right: 0px;
    bottom: 3px;
}

