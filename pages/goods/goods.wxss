@import "../../utils/weui.wxss";

.swiper-primary{
  width: 100%;
  height: 400rpx;
}
.swiper-primary image{
  width: 100%;
  height: 400rpx;
}
.goods-title{
  font-size: 36rpx;
  color:#333;
  line-height: 1.4;
}
.goods-desc{
  font-size: 30rpx;
  line-height: 1.4;
  color:#666;
  margin-top: 5rpx;
}
.goods-price{
  font-size: 26rpx;
  color:#999;
  padding: 5rpx 0 0;
}
.goods-price .price{
  font-size: 36rpx;
  color:#FF5757;
  padding-right: 10rpx;
}
.goods-addres{
  font-size: 26rpx;
}
.goods-phone{
  font-size: 26rpx;
}
.goods-info{
  padding: 10px 15px;
  background: #fff;
}
.wx-group-pic{
  width: 46rpx;
  height:46rpx;
  vertical-align: middle;
  padding-right: 20rpx;
}
.sub-title{
  margin-top: 20rpx;
  font-size: 32rpx;
  padding: 5px 15px;
  border-bottom:1rpx solid #f1f1f1;
}
.goods-content{
  padding: 15px 15px 120rpx;
  font-size: 28rpx;
  background: #fff;
}
.footer-cart{
  position: fixed;
  bottom:0;
  left:0;
  right:0;
  line-height: 90rpx;
  background: #fff;
  color:#fff;
  text-align: center;
  font-weight: 400;
  font-size: 32rpx;
  display: flex;
  border-top:1rpx solid #f1f1f1;
}
.footer-cart .icon{
  flex: 1;
  margin-top: -4rpx;
}
.footer-cart .buy{
   background: #49b34d;
   flex: 2;
}
.goods-content image{
  width: 100%;
}
.container{
  padding: 10px;
  background-image: -webkit-linear-gradient(rgba(73,179,77,0.3) 40%, #f2f2f2)
}
.goods-sticky{
  width: 100%;
  border-bottom: 1rpx solid #f2f2f2;
  background: #fff;
  z-index: 9;
  padding: 10px ;
  height:52px;
}
.min-btn-s{
  display: inline-block;
  font-size: 12px;
  padding: 3px 10px;
  background: #49b34d;
  border-radius: 3px;
  color:#fff;
}
.min-btn-s+.min-btn-s{
  margin-left: 10px;
}
.code-pic{
  width: 300rpx;
  height:300rpx;
}
.user-header .name{
  display: inline-block;
  padding-left: 10px;
}
.user-header .avatar{
  vertical-align: top;
  display: inline-block;
}
.user-header .name text{
  display: block;
}