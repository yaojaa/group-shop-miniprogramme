@import "../../utils/weui.wxss";

.swiper-primary {
    width: 100%;
    height: 550rpx;
}

.swiper-primary image {
    width: 100%
}

.goods-title {
    font-size: 36rpx;
    color: #333;
    line-height: 1.4;
}

.goods-desc {
    font-size: 30rpx;
    line-height: 1.4;
    color: #666;
    margin-top: 5rpx;
}

.goods-price {
    font-size: 26rpx;
    color: #333;
    padding: 5rpx 0 0;
}

.goods-price .price {
    font-size: 32rpx;
    color: #FF5757;
    padding-right: 10rpx;
}

.goods-addres {
    font-size: 26rpx;
}

.goods-phone {
    font-size: 26rpx;
}

.goods-info {
    padding-top: 10px;
    background: #fff;
}

.wx-group-pic {
    width: 46rpx;
    height: 46rpx;
    vertical-align: middle;
    padding-right: 20rpx;
}

.sub-title {
    margin-top: 20rpx;
    font-size: 32rpx;
    padding: 5px 0;
}

.goods-content {
    padding: 10px 0;
    font-size: 32rpx;
    line-height:1.7;
    background: #fff;
    word-wrap:break-word;
    overflow:hidden;
    word-break:break-all;
}

.footer-cart {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 48px;
    background: #fff;
    color: #fff;
    text-align: center;
    font-weight: 400;
    font-size: 32rpx;
    display: flex;
    border-top: 1rpx solid #f1f1f1;
}

.footer-cart .icon {
    flex: 1;
    padding-top: 1px;
}

.footer-cart .label {
    display: block;
    font-size: 20rpx;
    color: #666;
}

.footer-cart .buy {
    background: #49b34d;
    flex: 2;
    line-height: 48px;
    color: #fff;
    border-radius: 0
}

.goods-content image {
    width: 100%;
}

.goods-sticky {
    background-color: #fff;
    padding: 6px 15px;
     display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    align-items: center;
}

.min-btn-s {
    display: inline-block;
    font-size: 12px;
    padding: 3px 10px;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 3px;
    color: #fff;
}

.min-btn-s+.min-btn-s {
    margin-left: 10px;
}

.code-pic {
    width: 300rpx;
    height: 300rpx;
}

.user-info {
   -webkit-flex: 1;
   -moz-flex: 1;
   -ms-flex: 1;
   -o-flex: 1;
   flex: 1;
}

.user-info .name {
    display: inline-block;
    padding-left: 10px;
    line-height: 1.4;
}

.user-info .name text {
    line-height:1.6;
    display: inline-block;
}

.user-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow-y: hidden;
    display: inline-block;
    vertical-align: top;
}



.cart-panel {
    text-align: left;
}

.goods-thumbnail {
    border: 2px solid #fff;
    width: 120rpx;
    height: 120rpx;
    border-radius: 3px;
    margin-top: -40rpx;
    margin-left: 10px;
}

.type-box {
}

.cart-footer {
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    height: 48px;
    line-height: 48px;
    background: #fff;
    color: #fff;
    text-align: center;
    font-weight: 400;
    font-size: 32rpx;
}

.cart-footer .total {
    -webkit-flex: 3;
    -moz-flex: 3;
    -ms-flex: 3;
    -o-flex: 3;
    flex: 3;
    text-align: left;
    padding-left: 15px;
}

.cart-footer .settlement {
    -webkit-flex: 1;
    -moz-flex: 1;
    -ms-flex: 1;
    -o-flex: 1;
    flex: 1;
    background: #49b34d;
    border-radius: 0;
    color: #fff;
    height: 100%
}

.cart-footer .settlement button{
    color:#fff;
    border-radius: 0;
}

.cart-panel-hd {
    background-color: #f2f2f2;
    padding: 7px 15px;
    font-size: 14px;
    color:#666;
}

.share-box {
    overflow: hidden;
}



.goods-manage {
    position: relative;
}

.goods-manage .manage {
    position: absolute;
    top: 10rpx;
    right: 20rpx;
    z-index: 9999;
}

.share-box button {
    border: none;
    padding: 0;
    margin: 0;
    background-color: transparent;
}

.share-box button::after {
    border: none;
}

.countdownTime {
    font-size: 14px;
    background-color: #f8f8f8;
    color: #999;
    margin:0 -15px;
    text-align: center;
    overflow: hidden;
    padding: 7px;
}
