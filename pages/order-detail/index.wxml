<i-custom-bar title="订单详情" tit_txt_color="#ffffff" backColor="#49b34d" showBackIcon="{{true}}"> </i-custom-bar>
<view class="container gray-wrap cf">
    <view class="order-fixed-footer flex justify-end ph-df pv-sm shadow-df">
        <!--         <block wx:for="{{info.order_action}}" wx:key="{{index}}">
            <button class="btn round primary w-min-lg ml-sm" bindtap="handleConfirmReceipt" data-status="{{item.action_status}}">{{item.action_status_txt}}</button>
        </block> -->
        <button class="btn round primary hollow w-min-big ml-sm" data-opt="{{item.action_status}}" data-order_id="{{id}}" data-txt="{{item.action_status_txt}}" bindtap="orderActions" wx:for="{{info.order_action}}" wx:key="{{index}}">{{item.action_status_txt}}</button>
    </view>
    <view class="order-wrap">
        <view class="primary ph-df pv-sm text-white mb-sm">
            <view class="text-xl">{{info.order_status_txt}}</view>
            <!--             <view class="text-sm">59分钟订单关闭</view>
 -->
        </view>
        <view class="white-bg ph-df pv-sm mb-sm flex" wx:if="{{info.delivery_method == 1}}">
            <van-icon name="location" color="#999" />
            <view class="flex-sub ml-xs">
                <view class="text-justify">
                    <view><text class="mr-df">{{info.consignee}}</text>
                        <text>{{info.mobile}}</text></view>
                    <view class="text-sm warning-text">快递</view>
                </view>
                <view class="pt-xs text-sm text-gray">
                    收货地址： {{info.province}}{{info.city}}{{info.district}}{{info.address}}
                </view>
            </view>
        </view>
        <view class="white-bg ph-df pv-sm mb-sm flex" wx:if="{{info.delivery_method == 2}}">
            <van-icon name="location" color="#999" />
            <view class="flex-sub ml-xs">
                <view class="text-justify">
                    <view><text class="mr-df">{{info.seller.nickname}}</text>
                        <text>{{info.seller.mobile}}</text></view>
                    <view class="text-sm warning-text">自提</view>
                </view>
                <view class="pt-xs text-sm text-gray">
                    自提点： {{info.self_address}}
                </view>
            </view>
        </view>
        <view class="goods-panel ph-df white-bg cf">
            <view class="goods-panel-hd pv-sm flex align-center">
                <view class="flex-sub mr-df">
                    <navigator url="../userhome/index?id={{info.store.store_id}}" hover-class="none" class="flex align-center">
                        <image src="{{info.user.headimg}}" class="shop-tb mr-xs">
                        </image>
                        <view class="flex-sub text-hide">{{info.store.store_name}}</view>
                    </navigator>
                </view>
            </view>
            <view class="goods-panel-bd ">
                <view class="goods-panel-item pv-df solid-top" wx:for="{{info.order_detail}}" wx:key="{{index}}">
                    <navigator url="../goods-detail/index?id={{item.goods_id}}" hover-class="none" class="flex">
                        <image src="{{item.goods_cover}}" class="cover mr-sm"></image>
                        <view class="flex-sub por">
                            <view class="text-hide two-line text-black bold title">
                                {{item.goods_name}}
                            </view>
                            <view class="text-muted mt-xs text-sm des">{{item.spec_name}}</view>
                            <view class="text-justify bt-bar">
                                <view class="price bold">￥{{item.spec_price}}</view>
                                <view class="text-muted"><text>x </text>
                                    <text>{{item.qty}}</text></view>
                            </view>
                        </view>
                    </navigator>
                </view>
            </view>
        </view>
        <van-cell-group custom-class="mv-sm">
            <van-cell title="订单总价" value="￥{{info.pay_price}}" border="{{ false }}" />
            <van-cell title="订单编号" title-width="200rpx" border="{{ false }}" value="{{info.order_sn}}" value-class="text-gray" />
            <van-cell title="创建时间" value="{{addtime}}" border="{{ false }}" value-class="text-gray" />
            <van-cell title="付款时间" value="{{pay_time}}" border="{{ false }}" value-class="text-gray" />
        </van-cell-group>
    </view>
    <van-dialog id="van-dialog" />
</view>