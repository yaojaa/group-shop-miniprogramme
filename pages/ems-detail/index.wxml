<i-custom-bar title="物流详情" showBackIcon="{{true}}"> </i-custom-bar>
<view class="container gray-wrap cf">
    <view class="p-df white-bg flex mv-sm align-center">
        <view class="wuliu-box">
            <wux-icon type="md-airplane" color="#fff" size="48rpx"></wux-icon>
        </view>
        <view class="flex-sub ml-df">
            <view class="item-list">
                <view class="item">
                    <text class="text-gray">物流公司：</text>
                    <text>{{express_company}}</text>
                </view>
                <view class="item text-justify">
                    <view> <text class="text-gray">物流单号：</text>
                        <text>{{express_code}}</text></view>
                    <button class="btn gray hollow xs round " bindtap="copyOrder" data-text="{{express_code}}">复制</button>
                </view>
            </view>
        </view>
    </view>
    <view class="white-bg p-df">
        <wux-timeline >
            <view class="trace" wx:for="{{traces}}" wx:key="{{index}}">
                <wux-timeline-item content="{{item.time}}" dotStyle="border-color: #49b34d; color: #49b34d">
                    <view>{{item.content}}</view>
                </wux-timeline-item>
            </view>
        </wux-timeline>
    </view>
</view>