.container{
  position: fixed;
  left: 0;
  bottom: 0;
  top: 0;
  right: 0;
  background-color: #efefef;
  padding: 10px 0 60px;
  box-sizing: border-box;
  font-size: 14px;
  overflow-y: scroll;
}
.session{
  background-color: #fff;
}
.limit{
  padding: 0 15px;
}
.limit .header{
  height: 50px;
  line-height: 50px;
  display: flex;
  justify-content: space-between;
}
.limit .control{
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.line{
  height: 1px;
  background-color: #efefef;
  overflow: hidden;
}
.add-address{
  padding: 15px;
  height: 50px;
  text-align:center
}

.add-address button{
  display: inline-block;
  margin: 0 auto;
  text-align:center
}
.add-address text{
  vertical-align: middle;
  color: #999;
}
.add-address .icon{
  font-size: 20px;
  margin-right: 2px;
}
.address{
  display: flex;
  align-items: center;
  padding: 10px 0;
}
.address .icon-img{
  width: 50px;
  text-align: center;
}
.address .icon-img image{
  height: 24px;
  width: 100%;
  padding-left:20rpx
}
.address .content{
  width: 200px;
  border-left: 1px solid #efefef;
  flex-grow: 1;
  padding: 0 10px;
  line-height: 20px;
}
.address .content view{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.address .content .name{
  margin-bottom: 5px;
}
.address .content .des{
  font-size: 12px;
  color: #999;
}
.address .delete{
  padding-right: 15px;
}
.history{
  padding: 5px 15px 0;
  height: 40px;
  line-height: 40px;
  color: #999;
}


button.button{
  background: #1aad19 !important;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  font-size: 16px;
}
.get-location button{
  border: none;
  font-size: 14px;
  color: #999;
  height: 50px;
  line-height: 40px;
  text-align: left;
  padding-left: 15px;
}
.get-location button .icon{
  font-size: 20px;
}

.address .content .door_number{
  font-size: 26rpx;
}
.address .content .door_number input{
  font-size: 28rpx;
  color:#333;
}