<view class="container gray-wrap">

    <view class="content-wrap">
        <view class="tab-one" >

            <view class="no-content" wx:if="{{data_list.length == 0}}">暂无</view>


            <view class="coupon-item" wx:for="{{data_list}}" wx:key="index">

                 <view class="flex align-center">
                    <view class="flex-sub primary-text mr-sm"  >{{item.redpacket.title}}</view>

                    <view><text class="pink-text text-xxl bold-text">￥{{item.redpacket.reduce}}</text></view>
                </view>
           



                <view class="text-justify mt-xs ">
                    <view class="text-sm text-muted">满{{item.redpacket.full}}元可用</view>

                    <button id="{{item.store_id}}" data-title="{{item.title}}" data-reduce="{{item.reduce}}" bindtap="toUse" type="info" size="mini" custom-class="w-min-160">去使用</button>

                </view>
                <view class="solid-top mv-xs cf"></view>
                <view class="mt-xs text-sm text-justify text-muted">
                    <view>生效日期：{{item.start_time_fmt}}</view>
<!--                     <view><text>删除红包</text></view>
 -->                </view>
                <view class="text-sm text-muted mt-xs">
                    <text class="mr-sm">到期日期：{{item.stop_time_fmt}}</text>
<!--                     <text>小铺可用 || 指定商品可用></text>
 -->                </view>
            </view>
        </view>

    </view>
    <view class="load-box" wx:if="{{loading}}">
        <wux-spin wux-class="spin" size="large" />
    </view>
</view>