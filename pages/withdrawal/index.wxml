<view class="container">
	<view class="text-justify f14">
		<view>余额（元）</view>
<!-- 		<view>余额明细</view>
 -->	</view>
	<view class="money-box"><view class="money-yuan">¥</view><view class="money-num">{{store_money}}</view></view>
	<view class="withdraw-box">
	<i-input value="{{inputMoney}}" type="number" bindchange="inputMoneyChange" title="提现金额" autofocus placeholder="0.00" />
	</view>
	<button type="primary"  bindtap="getMoney"> 提现 </button>


	<view class="list" wx:if="{{withdrawalslist.length}}">

		<view class="item" wx:index="{{index}}" wx:for="{{withdrawalslist}}">
			
			申请记录
			 金额：{{item.money}}
			状态：{{["审核中","审核通过","提现成功"][item.status]}}
		</view>

		<view class="erweima">

			<text>快速提现可以联系下面客服</text>

			<image mode="aspectFit" src="http://img.daohangwa.com/tmp/wx6ac9955f87c289f0.o6zAJswbLfZtqnLUD5RXc3Q9FUIM.VYy1US8cMEhBe58a778ea691bf21baf41d61c8e6525c.jpeg" />

		</view>



    </view>

	    <i-message id="message" />

</view>