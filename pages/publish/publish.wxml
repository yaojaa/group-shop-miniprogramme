                    <view class="weui-cell__hd"><view class="weui-label">是否送货</view></view>
                    <view class="weui-cell__bd">
                    <switch bindchange="deliverChange"  checked="deliver" name="switch" /> <view wx:if="{{length > 5}}"> 1 </view>
<view wx:elif="{{deliver}}"> 送货上门 </view>
<view wx:else> 自取 </view> 
                    </view>
      </view> -->

<view>
          <view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">地址：</view></view>
                    <view class="weui-cell__bd">
                    <input name="address"  maxlength="50" bindtap="chooseMap" placeholder="点击选择" />
                    </view>
                    <view class="weui-cell__ft">
                    <view class="weui-icon-warn">></view>
                     </view>

              
                    
    </view>

     <view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">门牌号：</view></view>
                    <view class="weui-cell__bd">
                    <input  maxlength="50" bindtap="chooseMap" placeholder="例:16号楼293室" />
                    </view>

         </view>

</view>

</view>

<button formType="submit"   class="weui-btn weui-btn_primary">确定发布</button>

</form>
       

   
</view>
