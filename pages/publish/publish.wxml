</view> -->



<i-action-sheet visible="{{ visible1 }}" actions="{{ actions1 }}" show-cancel bind:cancel="handleCancel1" bind:click="handleClickItem1" />

<i-action-sheet visible="{{ visible2 }}" actions="{{ actions2 }}" show-cancel bind:cancel="handleCancel2" bind:click="handleClickItem2" />

<view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">活动时间：</view></view>
                    <view class="weui-cell__bd">

                    </view>
                    <view class="weui-cell__ft">
                    <view class="weui-icon-warn">
                     <view class="timePicker" wx:if="{{!isShowTimePicker}}" bindtap="showTimePicker">
                       默认发布后7天
                      <i-icon type="enter" size="28" />
                    </view>

<view class="timePicker" wx:if="{{isShowTimePicker}}">
<i-datepicker label="起：" title="开始日期" date="{{picker.start_date}}"  time="{{picker.start_time}}" binddatachange="start_time"> </i-datepicker>
<i-datepicker  label="至：" title="结束日期" date="{{picker.end_date}}" time="{{picker.end_time}}" bind:datachange="end_time"></i-datepicker>
</view>
    </view>
 </view>



</view>







<view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">配送方式：</view></view>
                    <view class="weui-cell__bd">
                    </view>
                    <view class="weui-cell__ft">
                    <view class="weui-icon-warn">
                   <navigator url="/pages/map/index?delivery_method={{delivery_method}}">

                            <block wx:if="{{sell_address.length}}">
                         <text wx:if="{{delivery_method==2}}">自取：</text>   {{sell_address[0].name}} {{sell_address[0].door_number}}</block>
                            <block wx:else>选择配送方式</block>


                            <i-icon type="enter" size="28" />
</navigator>

                    </view>
                     </view>

                    
</view>
  
</view>
       
</i-panel>
                    


<button formType="submit"   class="weui-btn weui-btn_primary">确定发布</button>







</form>
</view>
