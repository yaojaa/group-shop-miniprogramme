  <view class="page-body">
<view>快速发布你的宝贝！       
</view>
  <form bindsubmit="submitForm">
<view class="weui-uploader weui-cells_form weui-cell">
                        <view class="weui-uploader__bd">
                            <view class="weui-uploader__files" id="uploaderFiles">
                                <view class="weui-uploader__file" style="background-image:url(./images/pic_160.png)"></view>
                                <view class="weui-uploader__file" style="background-image:url(./images/pic_160.png)"></view>
                                <view class="weui-uploader__file" style="background-image:url(./images/pic_160.png)"></view>
                                <view class="weui-uploader__file weui-uploader__file_status" style="background-image:url(./images/pic_160.png)">
                                    <view class="weui-uploader__file-content">
                                        <i class="weui-icon-warn"></i>
                                    </view>
                                </view>
                                <view class="weui-uploader__file weui-uploader__file_status" style="background-image:url(./images/pic_160.png)">
                                    <view class="weui-uploader__file-content">50%</view>
                                </view>
                            </view>
                            <view class="weui-uploader__input-box">
                                <text class="upload_txt">图片/视频</text>
                            </view>
                        </view>
                    </view>


<view class="weui-cells weui-cells_form">

<view class="weui-cell">
  <input value="{{title}}" name="title" maxlength="50" placeholder="为宝贝添加个诱人的标题吧" />
</view>


<view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea name="content" class="weui-textarea"  placeholder="商品描述、介绍、特色等" rows="23"></textarea>
                </view>

  <view class="weui-uploader__input-box">
     <text class="upload_txt">介绍图片</text>
  </view>

            </view>

</view>




<view class="weui-cells weui-cells_form">
    <view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">团购价:</view></view>
                    <view class="weui-cell__bd">
                    <input name="price"  maxlength="50" placeholder="0.00" />
                    </view>
    </view>

     <view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">属性规格：</view></view>
                    <view class="weui-cell__bd">
                 <switch name="switch" checked="{{hasType}}" bindchange="switch2Change" />
                    </view>
      </view>

         <view class="weui-cell"  wx:if="{{hasType}}">
                    <view class="weui-cell__hd">
                    <view class="weui-label">+</view>
                    </view>
                    <view class="weui-cell__bd">
                       <input  maxlength="50" placeholder="例:白色款" />
  <input  maxlength="50" placeholder="例:99.8" />

                    </view>
      </view>

