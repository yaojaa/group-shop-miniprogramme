                    </view>
                    <view class="weui-cell__ft">
                    <view class="weui-icon-warn">
                       <i-button type="ghost" bindtap="handleOpen2">{{actions2[delivery_method-1].name}}</i-button> <i-icon type="enter" size="28" />        
                    </view>
