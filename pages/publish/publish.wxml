</view>







<view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">活动地点：</view></view>
                    <view class="weui-cell__bd">
                    </view>
                    <view class="weui-cell__ft">
                    <view class="weui-icon-warn">
                          <navigator url="/pages/map/index?delivery_method={{delivery_method}}">

                            <text wx:if="{{sell_address.length}}">{{sell_address[0].name}}</text>
                            <text wx:else>选择地址</text>


                            <i-icon type="enter" size="28" />
</navigator>

                    </view>
                     </view>

                    
