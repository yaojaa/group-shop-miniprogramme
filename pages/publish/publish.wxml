<view class="page-body">
<form bindsubmit="submitForm">
<view class="weui-uploader weui-cells_form weui-cell">
                        <view class="weui-uploader__bd">
                            <view class="weui-uploader__files" id="uploaderFiles">
                                <view wx:for="{{photoUrls}}" wx:key="*this" class="weui-uploader__file" style="background-image:url({{item}})">
                                </view>
                              
                                <view class="weui-uploader__file weui-uploader__file_status" style="background-image:url(./images/pic_160.png)">
                                    <view class="weui-uploader__file-content">
                                        <i class="weui-icon-warn"></i>
                                    </view>
                                </view>
                                <view class="weui-uploader__file weui-uploader__file_status" style="background-image:url(./images/pic_160.png)">
                                    <view class="weui-uploader__file-content">50%</view>
                                </view>
                            </view>
                            <view  wx:if="{{photoUrls.length < 6}}" class="weui-uploader__input-box" bindtap="chooseImage"  >
                                <text class="upload_txt">宝贝相册</text>
                            </view>
                        </view>
                    </view>


<view class="weui-cells weui-cells_form">

<view class="weui-cell">
  <input  name="goods_name" maxlength="50" placeholder="为宝贝添加个诱人的标题吧" />
</view>


<view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea style="height: 200px" name="goods_content" class="weui-textarea"  placeholder="商品描述、介绍、特色等" rows="223"></textarea>
                </view>


</view>
 <view class="weui-cell">

        <i-icon type="picture" size="36" color="#80848f"/>
        <i-icon type="video" size="38" color="#80848f"/>


   

</view>



<view class="weui-cell weui-cells_form" wx:if="{{morePic}}">
   <view class="weui-uploader__input-box" bindtap="chooseImage"  >
                                <text class="upload_txt">宝贝相册</text>
   </view>
</view>




</view>

<i-panel title="团购商品">
<view class="weui-cells_form">

  <view class="item" wx:for="{{goodsInfo}}" wx:key="$this">
        <view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">商品名称:</view></view>
                    <view class="weui-cell__bd">
                    <input  value="{{item.name}}" bindinput="inputDuplex" data-key="goodsInfo[{{index}}].name"  maxlength="50" placeholder="如：白色超大款" />
                    </view>
    </view>
     <view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">价格:</view></view>
                    <view class="weui-cell__bd">
                    <input  value="{{item.price}}"  maxlength="50" placeholder="0.00" />
                    </view>
    </view>
     <view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">库存:</view></view>
                    <view class="weui-cell__bd">
                    <input  maxlength="50" placeholder="0.00" value="{{item.stock}}" />
                    </view>
    </view>
        <i-icon wx:if="{{goodsInfo.length >1 }}" data-index="{{index}}" bindtap="removeGoods"  class="close" type="delete_fill" size="38" />

  </view>



  <text class="new_add_btn" bindtap="addNew"> +新商品</text> 

</view>
</i-panel>


<i-panel title="设置" >
<view class="weui-cells_form">

<view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">配送方式：</view></view>
                    <view class="weui-cell__bd">
                    </view>
                    <view class="weui-cell__ft">
                    <view class="weui-icon-warn">
                                       自提   <i-icon type="enter" size="28" />

                    </view>
                     </view>

                    
</view>

<view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">活动时间：</view></view>
                    <view class="weui-cell__bd">

                    </view>
                    <view class="weui-cell__ft">
                    <view class="weui-icon-warn">
<i-datepicker> </i-datepicker>
                                     
<i-datepicker></i-datepicker>
                                      
                                      

                    </view>
                     </view>



</view>

<view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">活动地点：</view></view>
                    <view class="weui-cell__bd">
                    </view>
                    <view class="weui-cell__ft">
                    <view class="weui-icon-warn">
                          <navigator url="/pages/map/index">请选择地址     <i-icon type="enter" size="28" />
</navigator>

                    </view>
                     </view>

                    
</view>
  
</view>
       
</i-panel>
                    








<button formType="submit"   class="weui-btn weui-btn_primary">确定发布</button>

</form>
</view>
