
  <i-custom-bar backColor="#fff" showIcon="{{true}}" title="发布"> </i-custom-bar>


<view class="page-body">

<view class="progress" wx:if="{{photoProgress}}" ><i-spin size="large"></i-spin>
</view>
<form bindsubmit="submitForm" >
<view class="weui-uploader weui-cells_form weui-cell">
                        <view class="weui-uploader__bd">
                            <view class="weui-uploader__files" id="uploaderFiles">
                                <view wx:for="{{photoUrls}}" wx:key="*this" class="weui-uploader__file" style="background-image:url({{item}})">
                      <i-icon class="close" data-index="{{index}}" bindtap="removePhoto" color="#80848f" size="26" type="close" />
                                </view>
                            <view  wx:if="{{photoUrls.length < 5}}" class="weui-uploader__input-box" bindtap="chooseImage"  >
                            <text class="upload_txt">
宝贝相册</text>
                            </view>
                         </view>

                        </view>
                    </view>


<view class="weui-cells weui-cells_form">

  <view class="weui-cell">
    <input  name="goods_name" class="goods_name" value="{{goods_name}}" maxlength="50" placeholder="为宝贝添加个诱人的标题吧" />
  </view>

<view class="weui-cell">
  <view class="weui-cell__bd">
    <view class='row' id="textareawrap" catchtap="onFocus">
      <text>{{currentInput}}</text>
      <textarea  maxlength="2000" bindinput="getInput"   value="{{goods_content}}"  name="goods_content" class="weui-textarea"  placeholder="商品描述、介绍、特色等" rows="6"></textarea>
    </view>
  </view>


</view>

<view class="weui-cell picture-item" wx:key="{{item.index}}" wx:for="{{content_imgs}}"  wx:key="*this">
                  <image src="{{item}}"  mode="aspectFill" />
                   <i-icon class="close" data-index="{{index}}" bindtap="removePictrue" color="#999" size="28" type="close" />
</view>


<view class="new_add_btn" bindtap="addPicture">

<i-icon type="add" size="20" color="#80848f"/>图文介绍（选填） <view wx:if="{{pictureProgress}}" class="loading">
<i-spin size="large"></i-spin>
</view>

</view>



<view class="weui-cell weui-cells_form" wx:if="{{morePic}}">
   <view class="weui-uploader__input-box" bindtap="chooseImage"  >
         <text class="upload_txt">宝贝相册</text>
   </view>
</view>




</view>

<i-panel title="商品规格">
<view class="weui-cells_form">

  <view class="item" wx:for="{{spec_item}}" wx:key="$this">
        <view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">规格:</view></view>
                    <view class="weui-cell__bd">
                    <input  value="{{item.key_name}}" bindinput="inputDuplex" data-key="spec_item[{{index}}].key_name"  maxlength="50" placeholder="如：白色、大号、10斤" />
                    </view>
    </view>
     <view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">价格:</view></view>
                    <view class="weui-cell__bd">
                    <input  value="{{item.price}}" type="digit"    bindinput="inputDuplex" data-key="spec_item[{{index}}].price"    maxlength="50" placeholder="0.00" />
                    </view>
    </view>
     <view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">库存:</view></view>
                    <view class="weui-cell__bd">
                    <input  maxlength="50"  bindinput="inputDuplex" data-key="spec_item[{{index}}].store_count"  placeholder="不限制" value="{{item.store_count}}" />
                    </view>
    </view>
        <i-icon wx:if="{{spec_item.length >1 }}" data-index="{{index}}" bindtap="removeGoods"  class="close" type="delete_fill" size="28" />

  </view>


<view class="new_add_btn" bindtap="addGoods">

        <i-icon type="add"  bindtap="addNew" size="20" color="#80848f"/> 新增规格

</view>

</view>
</i-panel>


<i-panel title="设置" >
<view class="weui-cells_form">

<view class="weui-cell">
                    <view class="weui-cell__hd"><view class="weui-label">订单与收款：</view></view>
                    <view class="weui-cell__bd">
                    </view>
                    <view class="weui-cell__ft">
                    <view class="weui-icon-warn">
                <i-button type="ghost" bindtap="handleOpen1">{{actions1[collection_methods-1].name}}</i-button> <i-icon type="enter" size="28" />

                    </view>
                     </view>

                    
</view>



