@import "../../utils/weui.wxss";

.page-body{
  margin-top: 100px
}
.upload_btn{
  border: 1px solid #c00
}

.progress{
  text-align: center;
  position: absolute;
  right: 0;
  top: 0
}
.item{
  margin: 20rpx 20rpx
}

.weui-uploader{
  padding: 25px 10px 0
}
picker{
  display: inline-block
}
.upload_txt{
  position: absolute;
  left: 0;
  bottom: 5px;
  width: 100%;
  font-size: 18rpx;
  color: #666;
  text-align: center;
  display: block
}

.new_add_btn{
  padding: 20rpx;
  color: blue;
  margin-bottom: 4rpx;
  display: block
}

.item{
  position: relative
}

.close{
  position: absolute;
  right:1rpx;
  top:1rpx;
  background: #fff;
  border-radius: 100%;
  border:1rpx solid #ccc;
  line-height: 1;
  width: 26px;
  height: 26px;
  overflow: hidden;

}

.weui-uploader__file {

position:relative;
margin-right:9rpx;
margin-bottom:9rpx;
width:135rpx;
height:135rpx;
background-size: cover;
 border: 1px solid #ddd
}

.weui-uploader__file .close{
  right:-10rpx;
  top:-20rpx;
  z-index: 99
}
.weui-uploader__input-box {

width:133rpx;
height:133rpx;
border:1px solid #d9d9d9;

}
.new_add_btn{
  font-size:14px;
  line-height: 2.0;
  color: #37a;
  position: relative;
}
.loading{
  display: inline-block;
  position: absolute;
  right: 20px;
  top: 5rpx
}


.i-icon-close{
  background: #fff
}
.goods_name{
      min-width:90%;
     font-weight: bold;
}
.weui-cell {
font-size:32rpx
}

#textareawrap{

  width: 100%;
  position: relative;
 
}

#textareawrap text{
   display:block;
   visibility:hidden;
   word-break:break-all;
   word-wrap:break-word;
       min-height: 300rpx

}

#textareawrap .weui-textarea {
    height:100%;
    position: absolute;
    overflow-y:hidden;
    word-break:break-all;
    word-wrap:break-word;
    left: 0;
    top: 0;
    min-height: 300rpx
}



