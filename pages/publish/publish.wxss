@import "../../utils/weui.wxss";
.upload_btn{
  border: 1px solid #c00
}

.progress{
  text-align: center;
  position: absolute;
  right: 0;
  top: 0
}
.item{
  border: 1px solid #ddd;
  box-shadow: 0 0 2px #eee;
  margin: 20rpx 20rpx
}

.weui-uploader{
  padding: 25px 10px 0
}
picker{
  display: inline-block
}
.upload_txt{
  position: absolute;
  left: 0;
  bottom: 5px;
  width: 100%;
  font-size: 18rpx;
  color: #666;
  text-align: center;
  display: block
}

.new_add_btn{
  padding: 20rpx;
  color: blue;
  margin-bottom: 4rpx;
  display: block
}

.item{
  position: relative
}

.close{
  position: absolute;
  right:1rpx;
  top:1rpx;

}

.weui-uploader__file {

position:relative;
margin-right:9rpx;
margin-bottom:9rpx;
width:135rpx;
height:135rpx;
background-size: cover;
}

.weui-uploader__file .close{
  right:-10rpx;
  top:-20rpx;
  z-index: 99
}
.weui-uploader__input-box {

width:133rpx;
height:133rpx;
border:1px solid #d9d9d9;

}

