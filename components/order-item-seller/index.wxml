<view class="goods-panel ph-df white-bg mv-sm cf">
    <view class="goods-panel-hd pv-sm flex align-center">
        <view class="flex-sub mr-df">
            <view class="flex align-center">

                <image src="{{item.user.headimg}}" class="shop-tb mr-xs">
                </image>
                <view class="flex-sub text-hide" >
                    {{item.user.nickname}}
               </view>
            </view>

        </view>
        <view class="text-muted {{'color_'+item.order_status}}">
            <text>{{item.order_status_txt}}</text>
        </view>
    </view>
    <view class="solid-bottom"></view>
    <view class="goods-panel-bd pb-df" >
    

         <navigator  wx:for="{{item.order_detail}}" wx:key="{{index}}" wx:for-item="goods" 
         url="../order-detail-seller/index?id={{item.order_id}}" 
         hover-class="none" class="flex mt-df goods-panel-item">
            <image src="{{goods.spec_pic[0] || goods.goods_cover}}?imageView2/2/w/159/h/150/format/jpg/q/75" class="cover mr-sm"></image>
            <view class="flex-sub por">
                <view class="text-hide title">
                    {{goods.spec_name}}  <text class="text-muted"> x{{goods.qty}}</text>
                </view>
                <view class="text-muted text-hide text-sm" style="padding: 4px 0">{{goods.goods_name}}</view>
                <view >
                    <text class="price bold ">￥{{goods.spec_price}}</text>
                    <block wx:if="{{item.shipping_money!='0.00'}}">
                        + ¥ {{item.shipping_money}}(运费) 
                    </block>
                </view>
            </view>
           <view >{{item.time_ago}}</view>

        </navigator>
    </view>


    <view class="solid-bottom"></view>
    <view class="goods-panel-fd">
        <block wx:for="{{item.seller_next_handle}}" wx:key="{{item.order_id}}" wx:for-item="btn">
                    <button data-avatar="{{item.user.headimg}}" data-user_name="{{item.consignee}}" class="btn round primary  w-min-big mv-sm ml-sm btn-{{btn.opt}}" 
                    data-id="{{item.order_id}}" 
                    data-opt = "{{btn.opt}}"
                    data-cindex = "{{cindex}}"
                    data-pindex = "{{pindex}}"
                    data-txt = "{{btn.txt}}" 
                    bindtap = "orderActions"
                    >{{btn.txt}}</button>
            </block>
    </view>
</view>