/* plugin/components/richeditor/richeditor.wxss */
input {
  font-size: 30rpx;
  padding: 0 28rpx;
  height: 88rpx;
}

.rich-editor-wrp {
  padding-right: 10px;
  padding-left: 10px;
  background: #f8f8f8;
}

.main-editor-ctl {
  display: flex;
  width: 640rpx;
  margin: 28rpx auto;
  border-radius: 12rpx;
  border: 1rpx solid #49b34d;
  overflow: hidden;
}

.editor-ctl-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #49b34d;
  background-color: #fff;
  border-left: 1rpx solid #49b34d;
}

.editor-ctl-item:active {
  color: #fff;
  background-color: #49b34d;
}

.editor-ctl-item:first-child:active {
  border-left: 1rpx solid #49b34d;
}

.editor-ctl-item:first-child {
  border-left: 1rpx solid #fff;
}

.common-contain {
  margin: 32rpx 12rpx;
  background-color: #f8f8f8;
  position: relative;
}

.up-ctx {
  overflow: hidden;
}

.up-ctx textarea {
  font-size: 16px;
  line-height: 28px;
  background: #fff;
  padding: 4px;
  min-height: 88px;
}

.common-contain.text-contain .up-ctx {
  padding-top: 28rpx;
}

.common-contain.video-contain .up-ctx video {
  width: 100%;
}

.common-contain.video-contain .up-ctx {
  height: 450rpx;
}

.common-contain.image-contain {
  text-align: center;
}

.common-contain.image-contain image {
  display: block;
}

.common-contain.video-contain {
  text-align: center;
}

.common-contain .image-desc {
  font-size: 24rpx;
  color: #666;
}

.down-ctx {
  text-align: left;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e4e4e4;
  padding-top: 8rpx;
}

.op-btn-wrp {
  display: flex;
  border-top: 1rpx solid #e4e4e4;
}

.op-btn-wrp.nt {
  border-top: 0;
}

.op-btn {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  position: relative;
  padding-top: 3px;
}

.white-mask {
  width: 100%;
  height: 100%;
  z-index: 3;
  background-color: rgba(255, 255, 255, 0.8);
  position: absolute;
}

.add-img {
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx auto;
}

.add-video {
  width: 140rpx;
  height: 140rpx;
  margin: 140rpx auto;
}

.common-edit-contain {
  font-size: 16px;
  height: 100px;
  width: 100%;
}

.float-ctl {
  position: absolute;
  left: 0;
  width: 100%;
  background-color: #fff;
  box-shadow: 1rpx 5rpx 6rpx rgba(0, 0, 0, 0.1);
  margin-top: 18rpx;
  z-index: 9;
  padding: 5px 0;
}
.float-ctl .item {
  padding: 8px 0;
  font-size: 14px;
}
.float-tri {
  display: block;
  width: 0;
  height: 0;
  border-width: 0 28rpx 28rpx;
  border-style: solid;
  border-color: transparent transparent #fff; /*透明 透明  黄*/
  position: absolute;
  top: -20rpx;
  left: 50%;
  margin-left: -28rpx;
}
.editor-nav {
  display: flex;
  justify-content: space-around;
  padding-bottom: 30rpx;
}
.editor-nav .item {
  text-align: center;
}
.editor-nav .item .label {
  color: #666;
  font-size: 14px;
}
.content-size{
  height: 0;
  overflow: hidden;
}