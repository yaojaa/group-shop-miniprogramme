.item-wrap {
  position: relative;
}
.item-wrap .item {
  position: absolute;
  width: 100%;
  z-index: 1;
}
.item-wrap .item.itemTransition {
  transition: transform 0.3s;
}
.item-wrap .item.zIndex {
  z-index: 2;
}
.item-wrap .item.cur {
  transition: initial;
}
.item-wrap .item.fixed {
  z-index: 0 !important;
}

.info {
  position: relative;
  padding-top: 100%;
}
.info__item {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding: 6rpx 4rpx;
  box-sizing: border-box;
  background-color: transparent;
  border:none;
}
.info__item .image {
  width: 100%;
  height: 100%;
  border: 1rpx solid #ebedf0;
  box-sizing: border-box;
}

.cell {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #ebedf0;
  background: #FFFFFF;
}
.cell__hd {
  font-size: 0;
}
.cell__hd .image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
}
.cell__bd {
  flex: 1;
}
.cell__bd .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.cell__bd .des {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  color: #666666;
  font-size: 24rpx;
}
.delete-btn{
  position: absolute;
  right: 0;
  top: -8rpx;
  border-radius: 100%;
  line-height: 1;
  width: 20px;
  height: 20px;
  overflow: hidden;
  background-color: #333;
}

.upload_txt{
  position: absolute;
  left: 0;
  bottom: 5px;
  width: 100%;
  font-size: 18rpx;
  color: #666;
  text-align: center;
  display: block
}

.weui-uploader{
  height: 100%;
  padding: 6rpx 4rpx;
  box-sizing: border-box;
}
.weui-uploader__input-box {

  height: 100%;
  width: 100%;
  box-sizing: border-box;
  border: 1rpx solid #ebedf0;
  box-sizing: border-box;
  background: url('data:image/png;base64,') no-repeat center 20%;
}


