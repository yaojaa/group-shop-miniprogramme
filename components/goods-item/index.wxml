<view class="goods-item">
    <view class="goods-body">
        <navigator  url="../goods/goods?goods_id={{item.goods_id}}" hover-class="none">
            <image src='{{item.goods_cover}}?imageView2/2/w/66/h/66/format/jpg/q/75' class='hd'></image>
        </navigator>
        <view class="bd">
            <navigator  url="../goods/goods?goods_id={{item.goods_id}}" hover-class="none">
                <view class="flex align-center"> 
                    <i-icon type="lock" color="#ffa200" size="18" wx:if="{{is_recommend==0}}" />
                    <view class="flex-sub ml-xs">
                        <view class="tit ">
                            <view class="">{{item.goods_name}}</view>
                        </view>
                    </view>
                </view>
            </navigator>
            <view class="gray-text text-xs" >
                <text class="ph-xs ph-xs" >浏览({{item.pageview_count}})</text> <text  class="ph-xs ph-xs"> 收款总额(￥{{item._order_total}})</text>

                <view class="danger-text p-xs" wx:if="{{index==1}}">
                    [合作中] 由"中西部农产品联盟"供货
                </view>
              <!--   <button class="hollow" data-url="{{item.goods_id}}" bindtap="editPage" size="mini"> 编辑 </button>
                <button class="hollow" data-id="{{item.goods_id}}" bindtap="delGoods" size="mini"> 删除 </button>
                <button class="hollow" data-id="{{item.goods_id}}" bindtap="moreAction" size="mini">
                    <i-icon size="28" color="#49b34d" type="other" />
                </button> -->
            </view>
        </view>
        <view class="statusBar"> 
            <!--                                 _expires //是否过期 1正常 2未开始 3已过期
        }
        }
 -->
            <text wx:if="{{expires==2}}" style="color:#2d8cf0">未开始</text>
            <text wx:if="{{expires==1}}" style="color:#19be6b">开团中</text>
            <text wx:if="{{expires==3}}" style="color:#666">已结束</text>
        </view>
    </view>

     <van-grid column-num="5">
  <van-grid-item use-slot>
    <button  class="hollow" 
    data-type="goods"
    data-cover ="{{item.goods_cover}}"
    data-goods_name = "{{item.goods_name}}"
    data-goods_id = "{{item.goods_id}}"

     size="mini" open-type="share">分享</button></van-grid-item>
  <van-grid-item  use-slot > <button class="hollow" data-url="{{item.goods_id}}" bindtap="gofans"  data-name="{{item.goods_name}}" data-id="{{item.goods_id}}"  size="mini"> 访客 </button> </van-grid-item>
  <van-grid-item use-slot > <button class="hollow" data-url="{{item.goods_id}}" bindtap="editPage"  data-name="{{item.goods_name}}" data-id="{{item.goods_id}}"  size="mini"> 修改 </button> </van-grid-item>
  <van-grid-item use-slot >
      <button class="hollow"  bindtap="managePage" data-id="{{item.goods_id}}" data-name="{{item.goods_name}}" data-delivery_method="{{item.delivery_method}}"  size="mini"> 订单({{item._order_count}}) </button>
  </van-grid-item> 

    <van-grid-item  use-slot>
        <button class="hollow" size="mini"  data-id="{{item.goods_id}}"  bindtap="moreAction">  <i-icon size="22" color="#36cc3b" type="unfold" /> </button>
    </van-grid-item>
</van-grid>

    <!--      <i-icon class="rm_btn"  data-id="{{item.goods_id}}" bindtap="rmGoods" size="30" type="trash_fill" />  -->
    <van-dialog id="van-dialog" />
</view>