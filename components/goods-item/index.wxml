<view class="goods-item">
    <view class="goods-body">
        <navigator  url="../goods/goods?goods_id={{item.goods_id}}" hover-class="none">
            <image src='{{item.goods_cover}}?imageView2/2/w/66/h/66/format/jpg/q/75' class='hd'></image>
        </navigator>
        <view class="bd">
            <navigator  url="../goods/goods?goods_id={{item.goods_id}}" hover-class="none">
                <view class="flex align-center"> 
                    <i-icon type="lock" color="#ffa200" size="18" wx:if="{{is_recommend==0}}" />
                    <view class="flex-sub ml-xs">
                        <view class="tit ">
                            <view class="">{{item.goods_name}}</view>
                        </view>
                    </view>
                </view>
            </navigator>
            <view class="gray-text " >
                <text class="ph-xs ph-xs f12px" >浏览({{item.pageview_count}})</text> <text  class="ph-xs ph-xs f12px"> 收款总额(￥{{item._order_total}})</text>


             <view class="f12px" style="color: #ff8900" wx:if="{{item.link_goods.length==2 && item.link_goods[1]!==null}}">
                由“{{item.link_goods[1].nickname}}”负责发货 

                <text wx:if="{{item.link_goods[1].is_del!=-1 && item.link_goods[1].is_on_sale==1}}">[上架中]</text>
                <text wx:if="{{item.link_goods[1].is_del==-1}}">[已删除]</text>



                
             </view>

  

              <view wx:if="{{item.link_goods.length==1 && item.link_goods[0]!==null}}" class="f12px"style="color: #ff8900">由"{{item.link_goods[0].store_name}}" 发货 
                <text wx:if="{{item.link_goods[0].is_on_sale==1}}">[上架中]</text>
                <text wx:if="{{item.link_goods[0].is_on_sale==2}}">[已下架]</text>

            </view>

            </view>
        </view>

        <view class="statusBar" wx:if="{{item.is_timelimit==1}}"> 
<!--    1正常 2未开始 3已过期 4 已下架
 -->            <text wx:if="{{expires==2}}" style="color:#2d8cf0">未开始</text>
            <text wx:if="{{expires==1}}" style="color:#19be6b">进行中</text>
            <text wx:if="{{expires==3}}" style="color:#666">已结束</text>
            <text wx:if="{{expires==4}}" style="color:#666">已下架</text>

        </view>
        <view wx:else>
            <text  style="color:#19be6b">进行中</text>
        </view>
    </view>


    <view  style="display:flex; justify-content:center">

  <!--       <button  class="hollow" 
    data-type="goods"
    data-cover ="{{item.goods_cover}}"
    data-goods_name = "{{item.goods_name}}"
    data-goods_id = "{{item.goods_id}}"

     size="mini" open-type="share">分享</button> -->





  <button wx:if="{{item.link_goods.length == 1 && item.link_goods[0]==null}}"  class="hollow" data-url="{{item.goods_id}}" bindtap="editPage"  data-name="{{item.goods_name}}" data-id="{{item.goods_id}}"  size="mini"> 修改 </button> 


    <button  wx:else class="hollow"  bindtap="editPrice"  
    data-link_goods="{{item.link_goods}}" 
    data-id="{{item.supplier_goods_id}}" data-goods_id="{{item.goods_id}}"  size="mini"> 改价 </button> 

 <button class="hollow" data-url="{{item.goods_id}}" bindtap="gofans"  data-name="{{item.goods_name}}" data-id="{{item.goods_id}}"  size="mini"> 访客 </button>

      <button class="hollow"  bindtap="managePage" data-id="{{item.goods_id}}" data-name="{{item.goods_name}}" data-delivery_method="{{item.delivery_method}}"  size="mini"> 订单({{item._order_count}}) </button>

           <button class="hollow" size="mini"  data-id="{{item.goods_id}}"  bindtap="moreAction">  <i-icon size="22" color="#36cc3b" type="unfold" /> </button>
        
    </view>


    <!--      <i-icon class="rm_btn"  data-id="{{item.goods_id}}" bindtap="rmGoods" size="30" type="trash_fill" />  -->
    <van-dialog id="van-dialog" />
</view>