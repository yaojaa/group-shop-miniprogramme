@import "../../../css/common.wxss";
.flex{
    display: flex;
}
.shrink0{
    flex-shrink: 0;
}
.grow1{
    flex-grow: 1;
}

.act-admin{
    padding: 0 30rpx 100rpx;
}
.act-list{
    margin-bottom: 40rpx;
}
.act-cell{
    border-bottom: 1px solid #efefef;
    padding: 20rpx 0;
}
.act-img{
    width: 120rpx;
    height: 120rpx;
    margin-right: 10px;
}

.act-img .act-logo{
    width: 100%;
    height: 100%;
    border-radius: 2%;
}
.act-main{
    width: 50%;
    line-height: 40rpx;
}
.act-top{
    width: 100%;
    margin-bottom: 40rpx;
}
.act-top .name{
    width: 50%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    margin-right: 20rpx;
}
.act-bottom .reason{
    margin-right: 20rpx;
    text-align: justify;
}

.act-bottom .button{
    padding: 0 20rpx;
    border-radius: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #fff;
    background: #69b90b;
    font-size: 24rpx;
}
.act-more-list{
    font-size: 32rpx;
    text-align: center;
    padding: 20rpx;
}

.act-submit{
    padding-top: 100rpx;
}

.act-submit button{
    background-color: #69b90b;
    color: #fff;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    width: 80%;
    margin: 0 auto;
}























