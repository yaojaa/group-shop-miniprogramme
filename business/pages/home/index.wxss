@import "../../../css/common.wxss";
.gradual-bg {
    background-image: -webkit-linear-gradient(bottom, #a3df00, #69b90b);

}

.switch{
    position: absolute;
    z-index: 99;
    left: 10px
}
.title{
    font-size: 34rpx;
    font-weight: bold;
}

.head-box {
    position: relative;
    background: url('https://static.kaixinmatuan.cn/static/bg2.jpg') center bottom no-repeat #fff;
    background-size: 100% auto;
    height: 300rpx;
    position: relative;
    width: 100%;
    padding-top: 150rpx;
    overflow: hidden;
}

.head-side {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    color:#fff;
    text-align: center;
}

.mini-tag{
    background: rgba(0, 0, 0, 0.2);
    font-size: 20rpx;
    height: 34rpx;
    line-height: 34rpx;
    padding: 0 14rpx;
    border-radius: 20rpx;
    color: #fff;
    display: inline-block;
}

.set-icon {
    position: absolute;
    right: 0;
    bottom: 0
}

.user-avatar {

    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    position: relative;

}



.shop-box {
}

.shop-name {
    color: #fff;
    font-size: 32rpx;
    font-weight: 400;
    display: block;
    text-shadow: 1px 1px 1px #999
}

.main-nav-box {
    height: 200rpx;
    overflow: hidden;
    border-radius: 8rpx;
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.08);
    position: absolute;
    left: 30rpx;
    right: 30rpx;
    top: 110rpx;
    z-index: 19;

}

.icon-nav-box {
    width: 690rpx;
    margin: -35rpx auto 25px;
    border-radius: 8rpx;
    margin-bottom: 120px
}

.info-box {
    width: 690rpx;
    margin: 20rpx auto 0;
}


.main-nav-box .icon-nav-item {
    width: 25%;
    position: relative;
}

.icon-nav-box .percent25 {
    width: 25%;
    position: relative;
    text-align: center;
}


.main-nav-box .icon-nav-item .label {
    font-size: 24rpx;
    color: #333;
    margin-top: 24rpx;
}

.main-nav-box .icon {
    width: 96rpx;
    height: 96rpx;
    display: block;
    margin: 10rpx auto 0
}

.icon-nav-box .label {
    font-size: 24rpx;
    color: #666;
    margin: 12rpx 0 18rpx;
}

.icon-nav-box .icon {
    width: 56rpx;
    height: 48rpx;
    display: block;
    margin: 20rpx auto 0
}

.icon-nav-box .icon image {
    width: 56rpx;
    height: 48rpx;
    display: block;
    margin: 0 auto
}


.main-nav-box .icon-nav-item .icon image {
    width: 72rpx;
    height: 72rpx;
    display: block;
    margin: 0 auto
}

.hover-main-nav {
    background: none;
    color: #333 !important;
    opacity: 0.9;
}

.other-item {
    float: left;
    width: 33.33333%;
    text-align: center;
}
.ads{
    padding: 10px 30px;
    color: #fff;
    line-height: 1.5
}

.hollow{

color:#49b34d;
border-radius:50rpx;
padding:0 15px!important;
background:#f9fff5;
work-break:keep-all;
 white-space:nowrap;
 margin: 0 auto;

}

.hollow::after{ border: none; }

.goods-panel-bd{
    padding-bottom: 10px
}

