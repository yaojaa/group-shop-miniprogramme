@import "../../../css/common.wxss";
.gradual-bg {
    background-image: -webkit-linear-gradient(bottom, #a3df00, #69b90b);

}

.home-avatar {
    width: 68rpx;
    height: 68rpx;
}

.info-box {
    height: 140rpx;
    background: #fff;
}

.info-title{
    height: 140rpx;
    width: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.news-box {
    height: 100rpx;
    overflow: hidden;
    margin-top: 24rpx;
}

.news-item {
    font-size: 24rpx;
    color: #666;
    padding: 4rpx 0;
    line-height: 1.6;
}

.new-label {
    font-size: 20rpx;
    border: 1px solid #FF5238;
    color: #FF5238;
    padding: 0rpx 6rpx;
    border-radius: 4rpx;
    display: inline-block;
    margin-right: 20rpx;
    line-height: 1.2;
}

.head-box {
    background-size: 100% auto;
    background-repeat: no-repeat;
    padding: 0 30rpx 30rpx;
    position: relative;
    overflow: hidden;
}

.shop-box {
}

.shop-name {
    color: #fff;
    font-size: 28rpx;
    font-weight: 400;
    display: block;
}

.main-nav-box {
    height: 200rpx;
    overflow: hidden;
    border-radius: 8rpx;
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.08);
    position: absolute;
    left: 30rpx;
    right: 30rpx;
    top: 110rpx;
    z-index: 19;

}

.icon-nav-box {
    width: 690rpx;
    margin: 25rpx auto;
    border-radius: 8rpx;
}

.info-box {
    width: 690rpx;
    margin: 20rpx auto 0;
}


.main-nav-box .icon-nav-item {
    width: 25%;
    position: relative;
}

.icon-nav-box .percent25 {
    width: 25%;
    position: relative;
    text-align: center;
}


.main-nav-box .icon-nav-item .label {
    font-size: 24rpx;
    color: #333;
    margin-top: 24rpx;
}

.main-nav-box .icon {
    width: 96rpx;
    height: 96rpx;
    display: block;
    margin: 10rpx auto 0
}

.icon-nav-box .label {
    font-size: 24rpx;
    color: #666;
    margin: 12rpx 0 18rpx;
}

.icon-nav-box .icon {
    width: 56rpx;
    height: 48rpx;
    display: block;
    margin: 20rpx auto 0
}

.icon-nav-box .icon image {
    width: 56rpx;
    height: 48rpx;
    display: block;
    margin: 0 auto
}


.main-nav-box .icon-nav-item .icon image {
    width: 72rpx;
    height: 72rpx;
    display: block;
    margin: 0 auto
}

.hover-main-nav {
    background: none;
    color: #333 !important;
    opacity: 0.9;
}

.other-item {
    float: left;
    width: 33.33333%;
    text-align: center;
}
.ads{
    padding: 10px;
    color: #fff;
    line-height: 1.5
}