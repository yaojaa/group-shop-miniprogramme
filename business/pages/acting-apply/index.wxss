@import "../../../css/common.wxss";
.act-view{
    padding: 100rpx 30rpx 0;
}
.act-logo{
    display: block;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    margin: 0 auto;
}
.act-title{
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
    line-height: 36rpx;
    padding-top: 30rpx;
}
.act-textarea{
    padding-top: 80rpx;
    width: 100%;
    height: 300rpx;
}

.act-textarea textarea{
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 20rpx;
    background: #efefef;
    border-radius: 10rpx;
}
.act-submit{
    padding-top: 200rpx;
}

.act-submit button{
    background-color: #69b90b;
    color: #fff;
}






