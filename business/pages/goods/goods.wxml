                <view class="user-info-hd">
                    <image src="{{goods.supplier.supplier_logo}}" class="avatar"></image>
                </view>
                <view class="user-info-bd">
                    <text class="name">{{goods.supplier.supplier_name}}{{shareTit}}</text>
                </view>
            </view>
        </view>
    </imgs>
